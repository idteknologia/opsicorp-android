<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_title_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#00776a"
        android:textStyle="bold"
        android:text="@string/text_departure_flight"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/margin_default" />

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5">

        <ImageView
            android:id="@+id/img_airline"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:src="@drawable/background_slider"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tv_airline_name"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_airline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#24253d"
            android:text="@string/flightRoute" />

        <TextView
            android:id="@+id/tvPickSeat"
            style="@style/RobotoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:gravity="end"
            android:text="@string/select_seat"
            android:textColor="#009688"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivRemoveSeat"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/tvPickSeat"
            android:src="@drawable/ic_delete"/>

    </RelativeLayout>



</LinearLayout>