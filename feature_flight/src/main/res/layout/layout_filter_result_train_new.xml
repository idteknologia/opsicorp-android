<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="9dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="@dimen/margin_default"
    android:layout_marginLeft="@dimen/margin_default"
    android:elevation="3dp"
    android:background="@drawable/card_background">

    <RelativeLayout
        android:paddingTop="7dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="51dp">

        <LinearLayout
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title_train"
                style="@style/RobotoRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Garuda Indonesia"
                android:textColor="#24253d"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_type_class"
                style="@style/RobotoRegular"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#91929e"
                tools:text="Economy (K)" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_total_seat"
            android:layout_marginEnd="14dp"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_number_sheet"
                style="@style/RobotoRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#5488c1"
                android:gravity="end"
                tools:text="12 seat(s)" />
        </LinearLayout>



        <TextView
            android:layout_below="@+id/line_total_seat"
            android:id="@+id/tv_price"
            style="@style/RobotoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="37dp"
            android:text="@string/hargaTotal"
            android:textColor="#24253d"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_title_pax"
            android:layout_below="@+id/line_total_seat"
            style="@style/RobotoRegular"
            android:textColor="#cbcbd0"
            android:textSize="12sp"
            android:layout_marginEnd="14dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:text="@string/text_pax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/line_image_train"
            android:layout_alignParentBottom="true"
            android:src="@drawable/line_image_train"
            android:layout_width="17dp"
            android:layout_height="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45.5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#660b56a7">
        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_time_departure"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="06:40 - 08:35"
                android:textColor="#24253d"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="end"
            android:layout_marginEnd="14sp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#cc939396"
                android:letterSpacing="0.01"
                android:gravity="end"
                tools:text="3h, 17m "/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_chevron_down"
                android:layout_marginStart="5dp"
                app:tint="@color/tintTextView"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>