<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f6f8f8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="2dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:background="@android:color/white"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:id="@+id/img_hotel">
            </ImageView>
            <LinearLayout
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_hotel"
                    style="@style/RobotoMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="The Trans Luxury Bandung"
                    android:textColor="#24253d">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/rounded_button_type_hotel">

                    <TextView
                        android:id="@+id/tv_type_hotel"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Hotels"
                        android:textColor="#2b9a8e"
                        android:textSize="12sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/star_1"
                        android:layout_marginStart="2dp"
                        android:src="@mipmap/ic_star"
                        android:layout_width="14dp"
                        android:layout_height="10dp" />
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/star_2"
                        android:layout_marginStart="2dp"
                        android:src="@mipmap/ic_star"
                        android:layout_width="14dp"
                        android:layout_height="10dp" />
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/star_3"
                        android:layout_marginStart="2dp"
                        android:src="@mipmap/ic_star"
                        android:layout_width="14dp"
                        android:layout_height="10dp" />
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/star_4"
                        android:layout_marginStart="2dp"
                        android:src="@mipmap/ic_star"
                        android:layout_width="14dp"
                        android:layout_height="10dp" />
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/star_5"
                        android:layout_marginStart="2dp"
                        android:src="@mipmap/ic_star"
                        android:layout_width="14dp"
                        android:layout_height="10dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_place_gray">
                    </ImageView>

                    <TextView
                        android:id="@+id/tv_city"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        tools:text="Cibangkong, Bandung"
                        android:textColor="#91929e"
                        android:textSize="12sp">

                    </TextView>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_alignParentEnd="true"
                        android:id="@+id/tv_available"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#5499e4"
                        android:gravity="end"
                        tools:text="8 Room(s) available" />

                    <TextView
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#cccccc"
                        android:text="@string/text_room_night" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp">
                    <TextView
                        android:id="@+id/tv_prize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tintTextView"
                        android:textSize="14sp"
                        style="@style/RobotoBold"
                        android:text="@string/hargaTotal">
                    </TextView>

                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_chevron_down" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>