<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.opsigo.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content">
    </com.opsigo.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/RobotoBold"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#00776a"
                    android:layout_centerInParent="true"
                    android:text="@string/text_107_ticket_s_found" />
            </RelativeLayout>

            <TextView
                style="@style/RobotoBold"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="14dp"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#24253d"
                android:text="@string/text_departure_time"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_departure_time">
            </androidx.recyclerview.widget.RecyclerView>


            <TextView
                style="@style/RobotoBold"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="14dp"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#24253d"
                android:text="@string/text_arrival_time"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_arrival_time"/>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e0e0e1">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#24253d"
                    android:text="@string/text_price_pax" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#009688"
                    android:gravity="end"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:layout_alignParentEnd="true"
                    android:text="@string/text_filter_price_range" />

                <it.sephiroth.android.library.rangeseekbar.RangeSeekBar
                    android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:max="1000000"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/rangebar"
                    style="@style/Base.Sephiroth.Widget.RangeSeekBar"
                    android:layout_height="wrap_content"
                    app:range_progress_endValue="1000"
                    app:range_progress_startValue="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#939396"
                    android:text="@string/text_filter_price_min"
                    android:layout_below="@+id/rangebar"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginBottom="21dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#939396"
                    android:gravity="end"
                    android:layout_below="@+id/rangebar"
                    android:text="@string/text_filter_price_max"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e0e0e1">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/RobotoBold"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#24253d"
                    android:lineSpacingExtra="2sp"
                    tools:text="Train Name"/>

                <TextView
                    style="@style/RobotoBold"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#f19c00"
                    android:lineSpacingExtra="6sp"
                    android:gravity="end"
                    android:text="@string/text_select_all" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_name_train"/>
            <com.opsigo.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp
                android:id="@+id/btn_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_marginTop="49dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>