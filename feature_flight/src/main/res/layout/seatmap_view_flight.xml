<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.opsigo.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">
    </com.opsigo.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_marginBottom="110dp"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_select_passanger"
                android:visibility="visible">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3d3d8"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:background="@drawable/rounded_seatmap_pick"
                        android:layout_width="16dp"
                        android:layout_height="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#91929e"
                        android:text="Pick"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"/>
                    <LinearLayout
                        android:visibility="gone"
                        android:background="@drawable/rounded_seatmap_selected"
                        android:layout_width="16dp"
                        android:layout_height="16dp"/>
                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#91929e"
                        android:text="Selected"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"/>
                    <LinearLayout
                        android:background="@drawable/rounded_seatmap_available"
                        android:layout_width="16dp"
                        android:layout_height="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#91929e"
                        android:text="Available"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"/>
                    <LinearLayout
                        android:background="@drawable/rounded_seatmap_occupied"
                        android:layout_width="16dp"
                        android:layout_height="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#91929e"
                        android:text="Occupied"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:background="@color/colorPrimary">
                </LinearLayout>
                <ImageView
                    android:id="@+id/ivAirlines"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/train_logo"
                    android:layout_marginRight="10dp">
                </ImageView>
                <LinearLayout
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_name_airline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#b2bbc6"
                        android:text="Argo Parahyangan Ta.."/>
                    <TextView
                        android:id="@+id/tv_code_airline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#24253d"
                        android:text="KAI-209"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">
                    <LinearLayout
                        android:onClick="showDialogAirline"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rounded_seatmap_available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_btn_dialog_cabin"
                            android:onClick="showDialogAirline"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#24253d"
                            android:text="Airlines" />

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/chevron_down">

                        </ImageView>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<!--                <HorizontalScrollView-->
<!--                    android:fillViewport="true"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent">-->
<!--                    -->
<!--                </HorizontalScrollView>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/line_gap"
                        android:layout_width="match_parent"
                        android:layout_height="15dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="27dp"
                            android:layout_height="match_parent"
                            android:background="#f5f5f5"></LinearLayout>
                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="false"
                            android:id="@+id/recyclere_seatmap">
                        </android.support.v7.widget.RecyclerView>

                    </HorizontalScrollView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="27dp"
                    android:layout_height="13dp"
                    android:background="@drawable/rectangel_seatmap">
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <RelativeLayout
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:orientation="vertical"
            android:id="@+id/shadow_line_bottom"
            android:background="@drawable/shadow_top"/>

        <RelativeLayout
            android:layout_below="@+id/shadow_line_bottom"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/line_selected_type"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/selected_image_logo"
                    android:layout_width="22dp"
                    android:layout_height="28dp"></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#939396"
                        android:text="Selected Seat" />

                    <TextView
                        android:id="@+id/tv_number_seat_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#24253d"
                        android:text="No selected"
                        android:layout_marginTop="3dp"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="17dp"
                android:layout_below="@+id/line_selected_type"
                android:layout_marginLeft="21dp"
                android:background="@drawable/rounded_seatmap_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvAirlineClass"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#009688"
                    android:text="@string/airline_class" />

            </LinearLayout>



            <LinearLayout
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/timeExpired"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#FF0C1D"
                    android:gravity="center_horizontal"
                    android:text="Pick Seat Time 2:30" />

                <LinearLayout
                    android:onClick="applyListenerSeatFlight"
                    android:id="@+id/lay_btn"
                    android:background="@drawable/rounded_button_yellow"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="137dp"
                    android:layout_height="37dp">

                    <TextView
                        android:onClick="applyListenerSeatFlight"
                        style="@style/RobotoMedium"
                        android:id="@+id/tv_button"
                        android:textSize="16sp"
                        android:textColor="#24253D"
                        android:text="Apply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>






</RelativeLayout>