    </com.mobile.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:background="@android:color/white"
                android:paddingEnd="@dimen/margin_default"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:paddingStart="@dimen/margin_default">
                <TextView
                    android:layout_centerVertical="true"
                    style="@style/RobotoBold"
                    android:text="@string/transit"
                    android:textSize="13sp"
                    android:textColor="#24253d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <com.mobile.travelaja.module.item_custom.btn_filter.FilterTransitOpsicorp
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_transit">

            </com.mobile.travelaja.module.item_custom.btn_filter.FilterTransitOpsicorp>

