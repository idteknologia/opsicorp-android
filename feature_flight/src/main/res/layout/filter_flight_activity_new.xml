            <RelativeLayout
                android:id="@+id/rlPricePax"
                android:background="@android:color/white"
                android:paddingStart="20dp"
                android:paddingEnd="19dp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:visibility="gone">
                <TextView
                    android:layout_centerVertical="true"
                    style="@style/RobotoBold"
                    android:text="@string/price_pax"
                    android:textSize="13sp"
                    android:textColor="#24253d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvRangeBar"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    style="@style/RobotoMedium"
                    android:text="@string/text_pricebar_example"
                    android:textSize="13sp"
                    android:textColor="#009688"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llRangeBar"
                android:background="@android:color/white"
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="vertical"
                android:visibility="gone">

                <it.sephiroth.android.library.rangeseekbar.RangeSeekBar
                    android:layout_width="match_parent"
                    android:max="10000000"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/rangebar"
                    style="@style/Base.Sephiroth.Widget.RangeSeekBar"
                    android:layout_height="wrap_content"
                    app:range_progress_endValue="10000000"
                    app:range_progress_startValue="100000"/>

                <RelativeLayout
                    android:paddingRight="19dp"
                    android:paddingLeft="19dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        style="@style/RobotoRegular"
                        android:text="@string/text_start"
                        android:textSize="13sp"
                        android:textColor="#939396"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        style="@style/RobotoRegular"
                        android:text="@string/text_max"
                        android:textSize="13sp"
                        android:textColor="#939396"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e0e0e1"
                android:layout_marginBottom="10dp">

            </LinearLayout>

            <RelativeLayout
                android:background="@android:color/white"
                android:paddingStart="@dimen/margin_default"
                android:paddingEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="43dp">
                <ImageView
                    android:id="@+id/ivChair"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_chair"/>
                <TextView
                    android:layout_centerVertical="true"
                    style="@style/RobotoBold"
                    android:text="@string/text_available_cabin_class"
                    android:textSize="13sp"
                    android:textColor="#24253d"
                    android:layout_toEndOf="@id/ivChair"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvCabinClass">

            </androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e1">
            </LinearLayout>
            <RelativeLayout
                android:background="@android:color/white"
                android:paddingStart="@dimen/margin_default"
                android:paddingEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="43dp">
                <TextView
                    android:layout_centerVertical="true"
                    style="@style/RobotoBold"
                    android:text="@string/text_departure_time"
                    android:textSize="13sp"
                    android:textColor="#24253d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_departure_time">

            </androidx.recyclerview.widget.RecyclerView>

            <RelativeLayout
                android:background="@android:color/white"
                android:paddingStart="@dimen/margin_default"
                android:paddingEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="43dp">
                <TextView
                    android:layout_centerVertical="true"
                    style="@style/RobotoBold"
                    android:text="@string/text_arrival_time"
                    android:textSize="13sp"
                    android:textColor="#24253d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:background="@android:color/white"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_arrival_time">

            </androidx.recyclerview.widget.RecyclerView>

            <RelativeLayout
                android:onClick="airlinesPreferance"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button_filter_flight"
                android:paddingStart="11dp"
                android:paddingEnd="12dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                    android:onClick="airlinesPreferance"
                    android:id="@+id/img_airline"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/ic_flight"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:onClick="airlinesPreferance"
                    android:layout_marginStart="7dp"
                    android:layout_toEndOf="@+id/img_airline"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/airlines"
                    android:textSize="12sp"
                    android:textColor="#24253d"
                    style="@style/RobotoRegular" />
                
                <ImageView
                    android:onClick="airlinesPreferance"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_chevron_next"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_marginBottom="74dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button_filter_flight"
                android:paddingStart="11dp"
                android:paddingEnd="12dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/img_meal"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/meal_icon_gray"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_marginStart="7dp"
                    android:layout_toEndOf="@+id/img_meal"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/facilities"
                    android:textSize="12sp"
                    android:textColor="#24253d"
                    style="@style/RobotoRegular" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_chevron_next"/>
            </RelativeLayout>

            <com.mobile.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:id="@id/btn_next"
                android:layout_height="wrap_content">

            </com.mobile.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>