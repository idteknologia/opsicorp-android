<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/margin_default"
    android:paddingRight="@dimen/margin_default"
    android:layout_height="40dp"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:buttonTint="@color/checkbox"
        android:id="@+id/checkbox"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/tv_name_time"
        android:layout_toEndOf="@+id/checkbox"
        android:layout_centerVertical="true"
        style="@style/RobotoRegular"
        android:text="@string/text_filter_type"
        android:textSize="14sp"
        android:textColor="#9924253d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_centerVertical="true"
        style="@style/RobotoMedium"
        tools:text="00:00 - 06:00"
        android:textSize="14sp"
        android:textColor="#24253d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e1"
        android:layout_alignParentBottom="true">

    </LinearLayout>

</RelativeLayout>