<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="9dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="@dimen/margin_default"
    android:layout_marginLeft="@dimen/margin_default"
    android:clipToPadding="false"
    android:background="@drawable/card_background_under_api_21">
    
    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="12dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="62.5dp">

        <ImageView
            android:id="@+id/img_flight_icon"
            android:adjustViewBounds="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/sriwijaya" />

        <LinearLayout
            android:layout_toEndOf="@+id/img_flight_icon"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_airline"
                style="@style/RobotoRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Garuda Indonesia"
                android:textColor="#24253d"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_type_class"
                android:textColor="#b2bbc6"
                tools:text="Economy (C)"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="GA-21"
                android:textColor="#24253d"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                style="@style/RobotoBold"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hargaTotal"
                android:textColor="#24253d"
                android:textSize="12sp" />

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_price"
                    style="@style/RobotoBold"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hargaTotal"
                    android:textColor="#24253d"
                    android:textSize="14sp" />

                <TextView
                    style="@style/RobotoRegular"
                    android:textColor="#b2bbc6"
                    android:textSize="12sp"
                    android:layout_marginEnd="14dp"
                    android:text="@string/text_pax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:visibility="invisible"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hargaTotal"
                android:textColor="#24253d"
                android:textSize="12sp" />



        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="45.5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d8">
        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_destination"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="CGK - JOG"
                android:textColor="#b2bbc6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_time_departure"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="06:40 - 08:35"
                android:textColor="#24253d"
                android:textSize="12sp" />
        </LinearLayout>



        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/RobotoBold"
                android:textColor="#b2bbc6"
                android:text="@string/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_duration"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1h, 30m"
                android:textColor="#91929e"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/RobotoBold"
                    android:textColor="#b2bbc6"
                    android:text="@string/text_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/tv_transit"
                    style="@style/RobotoBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    tools:text="Direct"
                    android:textColor="#24253d"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_chevron_down"
                android:layout_width="12dp"
                android:layout_height="17dp"
                />


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>