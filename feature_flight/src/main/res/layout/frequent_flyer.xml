<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <com.opsigo.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content">

    </com.opsigo.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp>


    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/line_body"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPassengerFf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="20dp"
            android:text="Passenger"
            android:textColor="#24253d"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp" />

        <RelativeLayout
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:paddingRight="@dimen/margin_default"
            android:paddingLeft="@dimen/margin_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layCarrierCode"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:text="@string/carrier_code"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColorHint="#24253d"
                    android:textColor="#24253d"
                    android:onClick="selectCarrier"
                    android:id="@+id/et_Carrier"
                    android:paddingTop="8dp"
                    android:paddingBottom="9dp"
                    android:textAlignment="viewStart"
                    android:gravity="center"
                    android:text="@string/select_carrier_code"
                    android:textSize="@dimen/font_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />


            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/layCarrierCode"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLineEdittext">
            </LinearLayout>
            <ImageView
                android:onClick="selectCarrier"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_chevron_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/tintTextView" />

        </RelativeLayout>

        <RelativeLayout
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:paddingRight="@dimen/margin_default"
            android:paddingLeft="@dimen/margin_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layFreqNum"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:text="@string/frequent_flyer_number"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColorHint="#24253d"
                    android:textColor="#24253d"
                    android:onClick="selectPurpose"
                    android:id="@+id/et_freq_num"
                    android:paddingTop="8dp"
                    android:paddingBottom="9dp"
                    android:textAlignment="viewStart"
                    android:gravity="center"
                    android:textSize="@dimen/font_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />


            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/layFreqNum"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLineEdittext">
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:elevation="3dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d8d8d8">

            </LinearLayout>


            <com.opsigo.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginTop="15dp"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_marginBottom="29dp"
                android:id="@+id/btnApply"
                app:text="Apply">

            </com.opsigo.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>