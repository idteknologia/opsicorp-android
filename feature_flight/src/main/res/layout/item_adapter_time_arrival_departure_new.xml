<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/line_name_airline"
        android:paddingLeft="15dp"
        android:paddingRight="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:src="@drawable/background_slider"
            android:layout_marginRight="10dp"
            android:id="@+id/icon_train"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_toRightOf="@+id/icon_train"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_flight"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sriwijaya Air"
                android:textColor="#212121"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_class_type"
                style="@style/RobotoRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Economy Class"
                android:textColor="#8024253d"
                android:textSize="12dp" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_number_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            style="@style/RobotoBold"
            android:text="SA-110"
            android:textColor="#212121"
            android:textSize="12sp" />



    </RelativeLayout>


    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d8">
    </LinearLayout>


    <RelativeLayout
        android:paddingTop="17dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/line_depart"
            android:layout_marginLeft="59dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_time_departure"
                android:textSize="12.5sp"
                android:layout_marginBottom="5dp"
                android:textColor="#24253d"
                style="@style/RobotoMedium"
                android:text="13:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/tv_date_departure"
                android:textSize="11.3sp"
                android:textColor="#8024253d"
                style="@style/RobotoMedium"
                android:text="27 Apr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_toEndOf="@+id/line_depart"
            android:id="@+id/line_detail_depart"
            android:layout_marginLeft="36dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/line_depart">
            <TextView
                android:id="@+id/tv_name_departure"
                android:textSize="12.5sp"
                android:textColor="#24253d"
                style="@style/RobotoMedium"
                android:layout_marginBottom="5dp"
                android:text="Jakarta (CGK)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_airport_departure"
                android:textSize="11.3sp"
                android:textColor="#8024253d"
                style="@style/RobotoMedium"
                android:text="Soekarno Hatta International Airport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="9dp"
                android:layout_marginTop="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/rounded_blue_stroke_50_persen">

                <ImageView
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="9dp"
                    android:layout_gravity="center"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_clock_black"></ImageView>

                <TextView
                    android:layout_margin="2dp"
                    android:id="@+id/line_total_duration"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="#212121"
                    style="@style/RobotoMedium"
                    android:text="Total Duration : 1h 35m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>





        </LinearLayout>





        <LinearLayout
            android:layout_toEndOf="@+id/line_depart"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/line_depart">
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/line_before_dote_progress"
                android:orientation="vertical"
                android:background="#b2bbc6"
                android:layout_width="1dp"
                android:layout_height="5dp">
            </LinearLayout>
            <ImageView
                android:id="@+id/dote_progress"
                android:src="@drawable/point_departure"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:orientation="vertical">
            </ImageView>
            <View
                android:id="@+id/line_after_dote_progress"
                android:orientation="vertical"
                android:background="@drawable/line_dot"
                android:layout_width="1dp"
                android:layout_height="66dp">
            </View>

            <ImageView
                android:visibility="visible"
                android:background="@drawable/point_arrival"
                android:layout_width="9dp"
                android:layout_height="9dp"></ImageView>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="8.9dp"
            android:layout_toEndOf="@+id/line_depart"
            android:layout_below="@+id/line_detail_depart"
            android:layout_marginLeft="36dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/line_depart">
            <TextView
                android:id="@+id/tv_name_arrival"
                android:textSize="12.5sp"
                android:textColor="#24253d"
                style="@style/RobotoMedium"
                android:layout_marginBottom="5dp"
                android:text="Jakarta (CGK)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_airport_arrival"
                android:textSize="11.3sp"
                android:textColor="#8024253d"
                style="@style/RobotoMedium"
                android:text="Soekarno Hatta International Airport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="31dp"
            android:layout_below="@+id/line_depart"
            android:layout_marginLeft="59dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_time_arrival"
                android:textSize="12.5sp"
                android:textColor="#24253d"
                style="@style/RobotoMedium"
                android:text="13:00"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_date_arrival"
                android:textSize="11.3sp"
                android:textColor="#8024253d"
                style="@style/RobotoMedium"
                android:text="27 Apr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>