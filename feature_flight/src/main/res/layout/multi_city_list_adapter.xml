<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_flight_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            style="@style/RobotoBold"
            android:textColor="#00776a"
            android:text="Flight 1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/tv_flight_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            style="@style/RobotoBold"
            android:textColor="#24253d"
            android:text="17 Jan 2021"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_before_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5">

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_airline"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:src="@drawable/background_slider"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/tv_flight_code"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img_airline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#91929e"
                style="@style/RobotoBold"
                android:text="@string/flightRoute"
                android:layout_toRightOf="@+id/img_airline"
                android:layout_marginLeft="20dp"/>

            <TextView
                style="@style/RobotoBold"
                android:id="@+id/tvSelectFlight"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#009688"
                android:gravity="end"
                android:text="Select"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f5f5f5">

            <TextView
                android:id="@+id/tv_flight_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#24253d"
                style="@style/RobotoBold"
                android:text="Cengkareng - Kualanamo"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_after_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5">

            <ImageView
                android:visibility="visible"
                android:id="@+id/img_airline2"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:src="@drawable/background_slider"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/tv_flight_code2"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img_airline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#91929e"
                style="@style/RobotoBold"
                android:text="@string/flightRoute"
                android:layout_toRightOf="@+id/img_airline2"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/dotFlight"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/ic_oval_green"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/tv_flight_code2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/tv_flight_time"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/dotFlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#24253d"
                style="@style/RobotoBold"
                android:text="04:00 - 06:00"/>


            <TextView
                style="@style/RobotoBold"
                android:id="@+id/tvSelectFlight2"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#91929e"
                android:gravity="end"
                android:text="Change"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5">

            <TextView
                android:id="@+id/tv_flight_airline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#91929e"
                style="@style/RobotoBold"
                android:text="Sriwijaya Air - Economy - Subclass-X"
                android:layout_marginLeft="75dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5">

            <TextView
                android:id="@+id/tv_flight_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#91929e"
                style="@style/RobotoBold"
                android:text="Sub Total - 472.000 IDR/pax"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>