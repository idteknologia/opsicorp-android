    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/layout_after_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f5f5f5"
        android:visibility="visible">

        <ImageView
            android:visibility="visible"
            android:id="@+id/img_airline2"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_width="30dp"
            android:layout_marginTop="18dp"
            android:layout_height="22dp"
            android:src="@drawable/background_slider"
            android:layout_marginStart="@dimen/margin_default"/>


        <LinearLayout
            android:layout_toEndOf="@+id/img_airline2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_marginRight="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img_airline2">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:singleLine="true"
                    android:id="@+id/tv_flight_code2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#91929e"
                    style="@style/RobotoBold"
                    android:text="@string/flightRoute"/>

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/dotFlight"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/ic_oval_green"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/tv_flight_time"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/dotFlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#24253d"
                    style="@style/RobotoBold"
                    android:text="04:00 - 06:00"
                    android:layout_toRightOf="@+id/dotFlight" />


            </LinearLayout>

            <TextView
                android:singleLine="true"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_flight_airline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#91929e"
                style="@style/RobotoBold"
                android:text="Sriwijaya Air - Economy - Subclass-X" />
            <TextView
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#24253d"
                style="@style/RobotoBold"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/RobotoBold"
                android:id="@+id/tvSelectFlight2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#91929e"
                android:gravity="end"
                android:text="Change"/>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>