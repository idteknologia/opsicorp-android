    <style name="DialogCustom">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ToolBarStyle_light" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle_light</item>
    </style>

    <style name="DrawerArrowStyle_light" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

