    <!--font-->

    <style name="RobotoThint" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>

    <style name="RobotoRegular" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RobotoBlack" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="RobotoMedium" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="RobotoLight" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="RobotoItalic" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style>

    <style name="RobotoBold" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ContentDescriptionTextStyle">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#91929e</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextDarkFontLato">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/colorBlueTitle</item>
    </style>
    <style name="SubtitleTextStyle" parent="TextDarkFontLato">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">#24253d</item>
    </style>
    <style name="TextButtonStyle">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#24253d</item>
    </style>

    <style name="TextInputLayout_Label">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#91929e</item>
    </style>

    <style name="TextInputLayout_Input">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#91929e</item>
    </style>

</resources>
