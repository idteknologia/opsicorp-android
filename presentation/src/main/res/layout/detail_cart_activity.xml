<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundConfirmInformation">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:background="@android:color/transparent"
                    android:layout_marginTop="21dp"
                    android:id="@+id/line_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ic_back"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_close_black"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="20dp">
                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="35dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#24253d"
                            android:text="Flights Detail"
                            style="@style/RobotoBold"/>

                        <TextView
                            android:id="@+id/tvoneway"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#91929e"
                            android:layout_gravity="center"
                            style="@style/RobotoRegular"
                            android:text="@string/one_way"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:background="@color/transparent"
                    android:id="@+id/rv_detail_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line_title"
                    android:layout_marginTop="20dp">


                </android.support.v7.widget.RecyclerView>


                <android.support.v7.widget.CardView
                    android:layout_marginTop="20dp"
                    android:id="@+id/line_reason_code"
                    android:visibility="gone"
                    android:layout_below="@+id/rv_detail_cart"
                    android:layout_marginBottom="40dp"
                    android:background="@android:color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_reason_code_2"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true">

                        </ImageView>

                        <LinearLayout
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#eb0011"
                                android:text="@string/reason_code"
                                style="@style/RobotoRegular"/>
                            <TextView
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#24253d"
                                android:text="CZ - Fare option not available"
                                style="@style/RobotoBold"/>
                            <LinearLayout
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:background="#e0e0e1"
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:layout_marginEnd="20dp">
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginBottom="15dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginRight="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="15dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="#00776a"
                                    android:text="Description :"
                                    style="@style/RobotoBold"/>
                                <TextView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#91929e"
                                    android:text="@string/description_reason_code"
                                    style="@style/RobotoBold"/>
                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <com.opsigo.travelaja.module.item_custom.expandview.ExpandableLinearLayout
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    app:ael_duration="200"
                    app:ael_expanded="true"
                    android:id="@+id/body_prize"
                    app:ael_interpolator="accelerateDecelerate"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_station_departure"
                                style="@style/RobotoRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#b324253d"
                                android:text="Gajayana"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#939396"
                                android:text="Adult x1"
                                style="@style/RobotoRegular"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_prize_departure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#d9000000"
                            android:gravity="end"
                            android:text="IDR 110.800"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/line_arrival"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_station_arrival"
                                style="@style/RobotoRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#b324253d"
                                android:text="Argo Parahyangan Tambahan"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#939396"
                                android:text="Adult x1"
                                style="@style/RobotoRegular"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_prize_arrival"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#d9000000"
                            android:gravity="end"
                            android:text="IDR 110.800"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlBaggagePrice"
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_booking_baggage"
                                style="@style/RobotoRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#b324253d"
                                android:text="Baggage Charge"/>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_total_price_baggage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#d9000000"
                            android:gravity="end"
                            android:text="IDR 110.800"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlSsrPrice"
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_booking_ssr"
                                style="@style/RobotoRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#b324253d"
                                android:text="Special Service Request"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_total_price_ssr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#d9000000"
                            android:gravity="end"
                            android:text="IDR 110.800"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                style="@style/RobotoRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#b324253d"
                                android:text="Services Fee"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/colorPrimary"
                                android:text="Free"
                                style="@style/RobotoRegular"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvServiceFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#d9000000"
                            android:gravity="end"
                            android:text="IDR 0"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="25dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                style="@style/RobotoRegular"
                                android:id="@+id/tvVatPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#b324253d"
                                android:text="VAT (value-added tax)"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#d9000000"
                            android:gravity="end"
                            android:text="IDR 0"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:background="#f5f5f5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp">
                        <TextView
                            android:layout_width ="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize  ="14sp"
                            android:textColor="#24253d"
                            style="@style/RobotoBold"
                            android:text      ="Amount to pay"/>

                        <TextView
                            android:textStyle="bold"
                            style="@style/RobotoBold"
                            android:id="@+id/tv_price_total"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor ="#00776a"
                            android:text="IDR 221.600"/>

                    </RelativeLayout>
                </com.opsigo.travelaja.module.item_custom.expandview.ExpandableLinearLayout>


            </RelativeLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>