<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hotel Address"
        android:gravity="center"
        android:textColor="#212121"
        android:textSize="14dp"
        android:layout_marginTop="15dp"
        style="@style/RobotoBold">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_page_detail_hotel"
        android:textSize="14dp"
        android:textColor="#888888"
        style="@style/RobotoRegular"
        android:layout_marginLeft="66dp"
        android:layout_marginRight="66dp"
        android:gravity="center"
        android:layout_marginTop="10dp"></TextView>

    <RelativeLayout
        android:background="#f6f8f8"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        tools:ignore="WebViewLayout">

        <WebView
            android:padding="0dp"
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="178dp">
        </WebView>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/map_line"
            android:layout_width="match_parent"
            android:layout_height="178dp">
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="159dp"
            android:src="@drawable/direction"
            android:id="@+id/btn_direction">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Direction"
            android:textColor="#24253d"
            android:textSize="10dp"
            style="@style/RobotoRegular"
            android:id="@+id/tv_show_direction"
            android:gravity="center"
            android:layout_below="@+id/btn_direction">
        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Detail"
            android:layout_marginBottom="14dp"
            android:textSize="14dp"
            style="@style/RobotoBold"
            android:layout_below="@+id/tv_show_direction"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"></TextView>
    </RelativeLayout>


    <RelativeLayout
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Superior Room"
                style="@style/RobotoBold"
                android:textSize="14dp"
                android:textColor="#24253d"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#939396"
                android:textSize="10dp"
                android:text="Max 2 Guest/room"
                style="@style/RobotoRegular">
            </TextView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Room(s)"
            style="@style/RobotoBold"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#2b9a8e"></TextView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b2bbc6"></LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_room_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:background="#f6f8f8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="11dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="11dp">

        <android.support.v7.widget.CardView
            app:cardElevation="3dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel Message"
                        android:textSize="14dp"
                        android:textColor="#24253d"
                        style="@style/RobotoBold">
                    </TextView>

                    <ImageView
                        android:id="@+id/btn_show_hotel_message"
                        android:layout_alignParentRight="true"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_chevron_up_orange"></ImageView>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/line_sparator_hotel_massage"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2bbc6"></LinearLayout>


                <com.opsigo.travelaja.module.item_custom.expandview.ExpandableLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:ael_duration="200"
                    android:id="@+id/expand_hotel_message"
                    app:ael_expanded="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="15dp"
                    app:ael_interpolator="accelerateDecelerate">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_hotel_massage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>

                </com.opsigo.travelaja.module.item_custom.expandview.ExpandableLinearLayout>






            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelation Policy"
                android:textSize="14dp"
                android:textColor="#24253d"
                style="@style/RobotoBold">
            </TextView>

            <ImageView
                android:id="@+id/btn_canceled_policy"
                android:layout_alignParentRight="true"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_chevron_up_orange"></ImageView>


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b2bbc6"></LinearLayout>

    <com.opsigo.travelaja.module.item_custom.expandview.ExpandableLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/expand_canceled_policy"
        app:ael_duration="200"
        app:ael_expanded="true"
        app:ael_interpolator="accelerateDecelerate">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_cancel_policy">
        </android.support.v7.widget.RecyclerView>

    </com.opsigo.travelaja.module.item_custom.expandview.ExpandableLinearLayout>



    <LinearLayout
        android:background="#f6f8f8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="11dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="11dp">

        <android.support.v7.widget.CardView
            app:cardElevation="3dp"
            app:cardCornerRadius="4dp"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remark"
                        android:textSize="14dp"
                        android:textColor="#24253d"
                        style="@style/RobotoBold">
                    </TextView>

                    <ImageView
                        android:id="@+id/btn_remark"
                        android:layout_alignParentRight="true"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_chevron_up_orange"></ImageView>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/line_separator_remark"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2bbc6">
                </LinearLayout>

                <com.opsigo.travelaja.module.item_custom.expandview.ExpandableLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/expand_remark"
                    app:ael_duration="200"
                    app:ael_expanded="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="15dp"
                    app:ael_interpolator="accelerateDecelerate">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>

                </com.opsigo.travelaja.module.item_custom.expandview.ExpandableLinearLayout>




            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


    <RelativeLayout
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guest Name / Room"
                style="@style/RobotoBold"
                android:textSize="14dp"
                android:textColor="#00776a"></TextView>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bed type"
            style="@style/RobotoRegular"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#939396"></TextView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b2bbc6"></LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_room_passanger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#f6f8f8"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:id="@+id/tv_tittle_prize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Prize"
            android:textColor="#939396"
            style="@style/RobotoRegular"
            android:textSize="14dp"
            android:layout_marginTop="12dp"></TextView>

        <TextView
            android:layout_below="@+id/tv_tittle_prize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDR 1.500.819.000"
            android:textColor="#24253d"
            style="@style/RobotoRegular"
            android:layout_marginBottom="12dp"
            android:textSize="14dp"
            android:layout_marginTop="6dp"></TextView>



        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_send_receip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Receipt"
            android:textColor="@color/colorPrimary"
            style="@style/RobotoBold"
            android:textSize="14dp"
            android:layout_marginTop="12dp">
        </TextView>

    </RelativeLayout>


</LinearLayout>