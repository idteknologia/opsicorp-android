<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f6f8f8"
    android:layout_height="match_parent">

    <com.opsigo.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">
    </com.opsigo.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/nested_view"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.v7.widget.CardView
                    android:layout_marginTop="39dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="4dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="23dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="Purchase successfull"
                            style="@style/RobotoBold"
                            android:textColor="#24253d">
                        </TextView>

                        <LinearLayout
                            android:layout_marginTop="12dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Booking ID : 446516521"
                                android:textSize="12dp"
                                android:textColor="#939396"
                                style="@style/RobotoRegular"></TextView>
                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_content_copy"
                                android:layout_marginLeft="5.5dp"></ImageView>
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_marginTop="21dp"
                            android:paddingRight="15dp"
                            android:paddingLeft="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Purchased on"
                                android:textColor="#939396"
                                android:textSize="12dp"
                                style="@style/RobotoRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                            <TextView
                                android:layout_alignParentRight="true"
                                android:text="Sat,  27 Sept 2019"
                                android:textColor="#24253d"
                                android:textSize="12dp"
                                style="@style/RobotoRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginTop="14dp"
                            android:paddingRight="15dp"
                            android:paddingLeft="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Payment Method"
                                android:textColor="#939396"
                                android:textSize="12dp"
                                style="@style/RobotoRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                            <TextView
                                android:layout_alignParentRight="true"
                                android:text="Credit card"
                                android:textColor="#24253d"
                                android:textSize="12dp"
                                style="@style/RobotoRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:paddingRight="15dp"
                            android:paddingLeft="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Installment 6x"
                                android:textColor="#00776a"
                                android:textSize="10dp"
                                style="@style/RobotoRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginTop="13dp"
                            android:paddingRight="15dp"
                            android:paddingLeft="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/price_detail"
                                android:text="Payment Method"
                                android:textColor="#939396"
                                android:textSize="12dp"
                                style="@style/RobotoRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                            <TextView
                                android:layout_marginLeft="4dp"
                                android:layout_toEndOf="@+id/price_detail"
                                android:text="x10"
                                android:textColor="#00776a"
                                android:textSize="12dp"
                                style="@style/RobotoRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/price_detail">

                            </TextView>

                            <LinearLayout
                                android:onClick="showDetailData"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:onClick="showDetailData"
                                    android:text="IDR 1.500.000.890"
                                    android:textColor="#24253d"
                                    android:textSize="12dp"
                                    style="@style/RobotoBold"
                                    android:layout_marginRight="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>


                                <ImageView
                                    android:onClick="showDetailData"
                                    android:layout_gravity="center"
                                    android:id="@+id/btn_drop_down"
                                    android:layout_centerVertical="true"
                                    android:layout_width="11dp"
                                    android:layout_height="11dp"
                                    android:src="@drawable/ic_chevron_up_green">
                                </ImageView>

                            </LinearLayout>
                        </RelativeLayout>

                        <com.opsigo.travelaja.module.item_custom.expandview.ExpandableLinearLayout
                            app:ael_duration="200"
                            android:id="@+id/lay_detail"
                            app:ael_expanded="true"
                            android:layout_marginTop="20dp"
                            app:ael_interpolator="accelerateDecelerate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/line_doted"
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:layerType="software"
                                android:background="@drawable/background_dot_orange">
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_marginTop="19dp"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="Basic Fare"
                                    android:textColor="#939396"
                                    android:textSize="12dp"
                                    style="@style/RobotoRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_alignParentRight="true"
                                    android:text="IDR 300.000"
                                    android:textColor="#24253d"
                                    android:textSize="12dp"
                                    style="@style/RobotoRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_marginTop="14dp"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="Fare Vat Fare"
                                    android:textColor="#939396"
                                    android:textSize="12dp"
                                    style="@style/RobotoRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_alignParentRight="true"
                                    android:text="IDR 30.000"
                                    android:textColor="#24253d"
                                    android:textSize="12dp"
                                    style="@style/RobotoRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_marginTop="14dp"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="Total Fare"
                                    android:textColor="#939396"
                                    android:textSize="12dp"
                                    style="@style/RobotoRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_alignParentRight="true"
                                    android:text="IDR 300.000"
                                    android:textColor="#24253d"
                                    android:textSize="12dp"
                                    style="@style/RobotoRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_marginTop="14dp"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="NTS"
                                    android:textColor="#939396"
                                    android:textSize="12dp"
                                    style="@style/RobotoRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_alignParentRight="true"
                                    android:text="IDR 300.000"
                                    android:textColor="#24253d"
                                    android:textSize="12dp"
                                    style="@style/RobotoRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_marginTop="14dp"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="Services Fee"
                                    android:textColor="#939396"
                                    android:textSize="12dp"
                                    style="@style/RobotoRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_alignParentRight="true"
                                    android:text="IDR 30.000"
                                    android:textColor="#24253d"
                                    android:textSize="12dp"
                                    style="@style/RobotoRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>
                            </RelativeLayout>
                        </com.opsigo.travelaja.module.item_custom.expandview.ExpandableLinearLayout>

                        <LinearLayout
                            android:paddingRight="15dp"
                            android:paddingLeft="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="26dp"
                            android:paddingBottom="24dp">
                            <RelativeLayout
                                android:layout_marginRight="6dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_batal_select"
                                    android:background="@drawable/rounded_button_gray"
                                    android:layout_centerInParent="true"
                                    android:textSize="12dp"
                                    android:layout_width="170dp"
                                    android:gravity="center"
                                    android:layout_height="33dp"
                                    android:text="Reimbursement"
                                    android:textColor="@color/colorYellowButton_2"
                                    style="@style/RobotoBold">
                                </TextView>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_marginLeft="6dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_selesai_select"
                                    android:gravity="center"
                                    android:background="@drawable/rounded_orange_stroke_1"
                                    android:layout_centerInParent="true"
                                    android:textColor="#24253d"
                                    android:layout_width="170dp"
                                    android:layout_height="33dp"
                                    android:text="Send Receipt"
                                    style="@style/RobotoBold"
                                    android:textSize="12dp">
                                </TextView>
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <com.opsigo.travelaja.module.item_custom.circle_image.CircleImageView
                    android:elevation="5dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/succes_check"
                    android:layout_centerHorizontal="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                </com.opsigo.travelaja.module.item_custom.circle_image.CircleImageView>

            </RelativeLayout>


            <TextView
                android:layout_marginLeft="20dp"
                android:text="Product Details"
                android:textColor="#24253d"
                android:textSize="14dp"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>



            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginRight="-4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rv_product_detail">
                    </android.support.v7.widget.RecyclerView>

                    <!--<RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp">
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#b2bbc6">
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp">

                    </RelativeLayout>-->

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <TextView
                android:layout_marginTop="26dp"
                android:layout_marginLeft="20dp"
                android:text="Contact Golden Nusa"
                android:textColor="#24253d"
                android:textSize="14dp"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white">
                <TextView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/dummy_purchase_contact"
                    android:textColor="#24253d"
                    android:textSize="14dp"
                    style="@style/RobotoRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="19dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Contact us"
                        android:textColor="#009688"
                        android:textSize="14dp"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:text="Send Message"
                        android:textColor="#009688"
                        android:textSize="14dp"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </RelativeLayout>
            </LinearLayout>



        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>