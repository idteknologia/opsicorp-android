<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="109dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_mask_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginTop="35dp"
                android:layout_marginRight="@dimen/margin_default"
                android:orientation="vertical">

                <!--TextInput for Entering Password-->
                <TextView
                    android:id="@+id/tvTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="40dp"
                    android:text="@string/txt_welcome_back"
                    style="@style/SubtitleTextStyle"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone"
                        android:text=" Username or Email"
                        android:textColor="#91929e"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/et_username"
                        style="@style/RobotoRegular"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="10dp"
                        android:hint="Your_email@company.com"
                        android:paddingBottom="18dp"
                        android:singleLine="true"
                        android:textColor="#24253d"
                        android:textSize="@dimen/font_edittext" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hintPassword"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/password"
                        android:visibility="gone"
                        android:textColor="#91929e"
                        android:textSize="14dp" />


                    <EditText
                        android:id="@+id/et_password"
                        style="@style/RobotoRegular"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@+id/hintPassword"
                        android:layout_marginBottom="10dp"
                        android:paddingBottom="18dp"
                        android:singleLine="true"
                        android:hint="@string/password"
                        android:textColor="#24253d"
                        android:textSize="@dimen/font_edittext" />

                    <ImageView
                        android:id="@+id/eye_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hintPassword"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_visibility_off_black" />

                </RelativeLayout>
                <!--TextView to Display Text When Enter anything in any TextInputEditText-->
                <TextView
                    android:id="@+id/display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/btnSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/buttonHeight"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_button_yellow"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSignIn"
                        style="@style/TextButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_in" />

                </LinearLayout>

                <TextView
                    android:id="@+id/btnForgotPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/forgot_your_password"
                    android:textSize="18sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layTester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnJajang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="jajang"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btnKul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kul"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btnAkzirhp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="akzirhp"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btnBoboinas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="boboinas"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnBadriah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="badriah"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btnFurqon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="furqon"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btnSueb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sueb"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btnFitkar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="fitkar"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_loader"
            android:visibility="gone"
            android:gravity="center"
            android:background="@color/white_transparent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:text="@string/please_wait2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/its_just_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.cunoraz.gifview.library.GifView
                    android:id="@+id/gif1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    custom:gif="@mipmap/ellipsis" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>