<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_view"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginLeft="@dimen/margin_default"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#00776a"
                android:visibility="gone"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/line_nearby"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="53dp">
                <RelativeLayout
                    android:id="@+id/btn_office"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/ic_airport"
                        android:layout_marginLeft="14sp"
                        android:layout_centerVertical="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_before_cheklist"/>

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/ic_airport"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/ic_airport">
                        <TextView
                            style="@style/RobotoReguler"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#939396"
                            android:text="Country"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#24253d"
                            android:text="Office / Airport"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:background="#00776a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.007"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/btn_city"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    
                    <ImageView
                        android:id="@+id/ic_map"
                        android:layout_marginLeft="14sp"
                        android:layout_centerVertical="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_globe"></ImageView>

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/ic_map"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/ic_map">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            style="@style/RobotoReguler"
                            android:textColor="#939396"
                            android:text="Country"/>
                        <TextView
                            android:id="@+id/tv_country"
                            style="@style/RobotoBold"
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#939396"
                            android:text="Indonesia"/>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_city"
                android:layout_marginTop="20dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_address"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/ic_location"
                        android:layout_width="30dp"
                        android:layout_height="20dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/lay_city"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                            <TextView
                                android:id="@+id/tv_title_destination"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#91929e"
                                android:text="@string/title_nearby_city" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="@color/colorTextHint"
                                    android:textColorHint="@color/colorTextHint"
                                    android:hint="Select Your Destination City"
                                    android:text=""
                                    android:id="@+id/tv_city"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="9dp"
                                    android:textAlignment="viewStart"
                                    android:gravity="center"
                                    android:visibility="invisible"
                                    android:textSize="@dimen/font_edittext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlCompat" />

                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:layout_centerVertical="true"
                                    android:layout_width="match_parent"
                                    app:shimmer_auto_start="true"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/shimmer_view_container">
                                    <TextView
                                        android:textColorHint="@color/colorTextHint"
                                        android:hint=""
                                        android:background="#dddddd"
                                        android:textColor="#dddddd"
                                        android:text="Surabaya"
                                        android:paddingTop="8dp"
                                        android:paddingBottom="9dp"
                                        android:textAlignment="viewStart"
                                        android:gravity="center"
                                        android:textSize="@dimen/font_edittext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        tools:ignore="RtlCompat" />

                                </com.facebook.shimmer.ShimmerFrameLayout>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_below="@+id/lay_city"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorLineEdittext"></LinearLayout>


                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_date_check_in"
                        android:layout_width="@dimen/icon_edittext"
                        android:layout_height="@dimen/icon_edittext" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/lay_deaprture_date"
                            android:layout_width="142dp"
                            android:layout_height="60dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/RobotoReguler"
                                android:textColor="#91929e"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/checkIn"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_departur_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="8dp"
                                android:paddingBottom="9dp"
                                android:textAlignment="viewStart"
                                android:textSize="@dimen/font_edittext"
                                tools:ignore="RtlCompat" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_below="@+id/lay_deaprture_date"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/colorLineEdittext">

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_return_date"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/night"
                        android:layout_width="@dimen/icon_edittext"
                        android:layout_height="@dimen/icon_edittext" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/lay_end_date"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                            <TextView
                                style="@style/RobotoReguler"
                                android:textColor="#91929e"
                                android:id="@+id/title_duration"
                                android:text="@string/duration"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:id="@+id/tv_duration"
                                android:paddingTop="8dp"
                                android:paddingBottom="9dp"
                                android:textAlignment="viewStart"
                                android:gravity="center"
                                android:textSize="@dimen/font_edittext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_below="@+id/lay_end_date"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorLineEdittext"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_passanger"
                android:visibility="visible"
                android:layout_below="@+id/line_depart"
                android:layout_marginTop="20dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_edittext"
                        android:layout_height="@dimen/icon_edittext"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/passenger" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/line_passanger"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/guest"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_guest"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:hint="1 Guest"
                                android:paddingTop="8dp"
                                android:paddingBottom="9dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorTextHint"
                                android:textColorHint="@color/colorTextHint"
                                android:textSize="@dimen/font_edittext"
                                tools:ignore="RtlCompat" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/line_passanger"
                            android:background="@color/colorLineEdittext"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <com.mobile.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp
                android:layout_marginTop="43.5dp"
                app:text="@string/search"
                android:layout_marginBottom="33dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_next">
            </com.mobile.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp>


            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/line_title_family_time"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RobotoMedium"
                        android:id="@+id/tvFamilyTimeLabel"
                        android:text="@string/family_time"
                        android:layout_marginBottom="10dp"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="10sp"
                        android:id="@+id/tv_showmore_family"
                        android:textColor="@color/green_price"
                        android:text="@string/show_more"
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_tour"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"/>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>