<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#24253d"
            android:text="1."
            android:id="@+id/tv_number"
            style="@style/RobotoRegular">
        </TextView>



        <TextView
            android:id="@+id/tv_name"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#24253d"
            android:text="Vody Andrian"
            style="@style/RobotoRegular"
            android:layout_toRightOf="@+id/tv_number">
        </TextView>


        <TextView
            android:background="@drawable/rounded_green_stroke_gray_passanger_in_item_detail_purchase"
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adult"
            style="@style/RobotoRegular"
            android:textColor="#24253d"
            android:textSize="10dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">
        </TextView>

        <TextView
            android:id="@+id/btn_see_detail"
            android:layout_below="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See Detail"
            style="@style/RobotoRegular"
            android:textColor="#f8b945"
            android:textSize="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">
        </TextView>


        <LinearLayout
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/tv_number">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_bagage_purchase"></ImageView>


            <TextView
                android:id="@+id/total_bagage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 kg"
                style="@style/RobotoRegular"
                android:textColor="#939396"
                android:textSize="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">
            </TextView>
        </LinearLayout>




    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f6f8f8">
    </LinearLayout>

</LinearLayout>