<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:paddingTop="2dp"
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:background="@drawable/ic_rectangle_hotel_room"
        android:layout_width="92dp"
        android:layout_height="22dp">

        <TextView
            android:id="@+id/tv_type_refund"
            style="@style/RobotoRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guaranteed"
            android:textColor="#ffffff"
            android:textSize="12dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="11dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/tv_title_room"
            style="@style/RobotoMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Superior Room"
            android:textColor="#24253d"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/tv_bed_facility"
            style="@style/RobotoRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Twin bed or Double bed"
            android:textColor="#939396"
            android:textSize="12dp"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_wifi"
                    android:layout_width="20dp"
                    android:layout_height="16dp">
                </ImageView>
                <TextView
                    android:layout_marginTop="3dp"
                    android:text="Free Wifi"
                    android:textSize="7dp"
                    style="@style/RobotoRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#91929e"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_meal"
                    android:layout_width="20dp"
                    android:layout_height="16dp">
                </ImageView>
                <TextView
                    android:layout_marginTop="3dp"
                    android:text="Free Meel"
                    android:textSize="7dp"
                    style="@style/RobotoRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#91929e"></TextView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7dp"
            android:textColor="#24253d"
            android:text="Cancelation Policy"
            style="@style/RobotoMedium">
        </TextView>


        <TextView
            android:id="@+id/tv_policy_description"
            style="@style/RobotoMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="This Reservation is non-refundable"
            android:textColor="@color/colorPrimary"
            android:textSize="8dp"></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginTop="32dp"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room / Night"
            android:textSize="10dp"
            style="@style/RobotoRegular"
            android:textColor="#939396">
        </TextView>

        <TextView
            android:id="@+id/tv_prize_room"
            style="@style/RobotoMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="IDR 900.000.000"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"></TextView>



        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total include VAT"
            android:textSize="10dp"
            style="@style/RobotoRegular"
            android:textColor="#939396">
        </TextView>

        <TextView
            android:id="@+id/btn_next_step"
            android:layout_marginTop="9dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_available_room"
            android:layout_width="137dp"
            android:layout_height="29dp"
            android:text="Select"
            android:background="@drawable/rounded_button_yellow"
            android:gravity="center">
        </TextView>


    </LinearLayout>

</RelativeLayout>