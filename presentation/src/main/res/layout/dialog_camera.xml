<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="1000dp">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dialog_rounded"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="22dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="322dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="322dp"
                android:background="@drawable/dotted">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/RobotoBold"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#24253d"
                        android:text="@string/take_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:id="@+id/btn_camera1"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rounded_button_gray_camera"
                        android:layout_width="121dp"
                        android:layout_height="121dp">

                        <ImageView
                            android:id="@+id/btn_camera2"
                            android:layout_centerInParent="true"
                            android:layout_width="42dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_camera_dialog"/>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <com.mobile.travelaja.module.item_custom.circle_image.PorterShapeImageView
                android:id="@+id/image_selected"
                android:layout_width="match_parent"
                android:layout_height="322dp"
                app:siShape="@drawable/shape_rounded_rectangle"
                android:scaleType="fitCenter"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:background="#2b9a8e"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/black"
                    android:textSize="17dp"
                    android:text="or Attach by :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:background="#2b9a8e"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_marginLeft="20dp"
                android:layout_height="1dp">

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/line_upload_file"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button_camera"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_upload_file"
                    android:layout_width="18dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_upload"/>
                <TextView
                    android:id="@+id/title_upload_file"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorDarkGrayRound"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_file"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>