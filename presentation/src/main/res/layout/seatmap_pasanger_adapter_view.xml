<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="5dp"
        android:id="@+id/line_first"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/line_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/rounded_seatmap_adapter_passanger_selected"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_passanger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                style="@style/RobotoLight"
                android:textColor="#ffffff"
                android:text="Passenger 1"/>

            <TextView
                android:id="@+id/name_passanger"
                style="@style/RobotoRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:text="Vodyrizam" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/circleNumber"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_seatmap_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/number_seat"
                style="@style/RobotoBold"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#24253d"
                android:text="1A"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="5dp"
        android:id="@+id/line_last"
        android:orientation="vertical"></LinearLayout>


</LinearLayout>