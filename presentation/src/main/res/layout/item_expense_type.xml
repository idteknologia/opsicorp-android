<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="name"
            type="String" />
        <variable
            name="data"
            type="opsigo.com.domainlayer.model.settlement.ExpenseType" />
        <variable
            name="listener"
            type="com.mobile.travelaja.module.settlement.view.content.ExpenseTypeListener" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/margin_default"
    android:paddingEnd="@dimen/margin_default"
    android:clickable="@{name != data.description}"
    android:contentDescription="@{data.description}"
    android:onClick="@{()->listener.onClickItem(data)}"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckedTextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:checkMark="@drawable/item_check"
        style="@style/TextLato_Normal"
        android:checked="@{name == data.description}"
        android:text="@{data.description}"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textColor="#24253d"
        tools:checked="true"
        tools:text="Airport Tax"/>

    <View
        style="@style/Divider"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tvName"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
