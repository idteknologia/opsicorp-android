<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mobile.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">
    </com.mobile.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nested_view"
        android:fillViewport="true">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layTest"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progress_flight"
                    style="@style/MyProgressBar"
                    android:layout_marginBottom="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="1.7dp"
                    android:layout_marginTop="15dp">
                </ProgressBar>

                <TextView
                    android:id="@+id/tvProgress"
                    android:text="30%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvTestStatus"
                    android:text="status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvpnrid"
                    android:text="pnrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvpnrcode"
                    android:text="pnrcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_below="@id/layTest"
                android:id="@+id/button_switch"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingRight="@dimen/margin_default"
                android:paddingLeft="@dimen/margin_default"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="37dp">

                <TextView
                    android:id="@+id/btn_bisnis_trip"
                    android:background="@drawable/rounded_button_cart_list_left"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="@string/business_trip"
                    android:layout_marginRight="2dp"/>


                <TextView
                    android:id="@+id/btn_personal_trip"
                    android:background="@drawable/rounded_button_cart_list_right"
                    android:layout_marginLeft="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="#009688"
                    android:gravity="center"
                    android:text="@string/personal_trip"
                    android:layout_marginRight="2dp"/>
            </LinearLayout>


            <com.mobile.travelaja.module.cart.view.PageListBisnisTrip
                android:layout_width="match_parent"
                android:layout_below="@+id/button_switch"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:id="@+id/page_list_bisnis_trip"/>

            <com.mobile.travelaja.module.cart.view.PageDetailListTrip
                android:layout_width="match_parent"
                android:id="@+id/page_list_detail_trip"
                android:layout_height="match_parent"
                android:layout_below="@+id/button_switch"
                android:visibility="gone"/>

            <com.mobile.travelaja.module.cart.view.PageDetailPersonalTrip
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_below="@+id/button_switch"
                android:id="@+id/page_detail_personal_trip"
                android:layout_height="match_parent">

            </com.mobile.travelaja.module.cart.view.PageDetailPersonalTrip>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/line_prize"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:visibility="gone"
            android:id="@+id/line_warning"
            android:background="#eb0011"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginRight="7dp"
                    android:src="@drawable/warning_white"
                    android:layout_width="18dp"
                    android:layout_height="18dp">

                </ImageView>
                <TextView
                    android:singleLine="true"
                    android:id="@+id/tv_warning_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:gravity="center_horizontal"
                    android:text="Please wait.. We try to connecting KAI server" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/shadow_top"/>

        <RelativeLayout
            android:background="@android:color/white"
            android:paddingRight="@dimen/margin_default"
            android:paddingLeft="@dimen/margin_default"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <LinearLayout
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#24253d"
                    android:text="@string/total_purchase_orders"
                    style="@style/RobotoRegular"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_total_purchase"
                    android:layout_marginTop="5dp"
                    style="@style/RobotoBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:textColor="#009688"
                    android:text=""/>
            </LinearLayout>

            <TextView
                android:onClick="submitTripPlant"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:id="@+id/btn_submit_trip_plant"
                android:textColor="@color/textButtonColor"
                style="@style/RobotoBold"
                android:gravity="center"
                android:text="@string/checkout"
                android:background="@drawable/rounded_button_yellow"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>