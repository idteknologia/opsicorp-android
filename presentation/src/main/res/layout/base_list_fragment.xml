<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        <import type="androidx.databinding.ObservableBoolean"/>
        <import type="androidx.databinding.ObservableField"/>
        <variable
            name="textBottomValue"
            type="ObservableField&lt;String>" />
        <variable
            name="isSearch"
            type="Boolean" />
        <variable
            name="isLoading"
            type="ObservableBoolean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/includeSearch"
            layout="@layout/search_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/size_image_back"
            android:layout_height="@dimen/size_image_back"
            android:layout_gravity="center"
            android:scaleType="center"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_back"
            android:visibility="@{isSearch ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextButtonStyle"
            android:paddingBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_default"
            android:paddingStart="@dimen/margin_default"
            android:paddingRight="@dimen/margin_default"
            android:textColor="#00776a"
            android:visibility="@{isSearch ? View.GONE : View.VISIBLE }"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivBack"
            tools:text="Select Bank Transfer"
            tools:visibility="visible" />
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_default"
            android:paddingStart="@dimen/margin_default"
            android:paddingRight="@dimen/margin_default"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:visibility="@{isSearch ? View.GONE : View.VISIBLE }"
            tools:text="Transportation to Airport or non Airport."
            tools:visibility="gone"
            />

        <TextView
            android:id="@+id/tvTittleLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waiting"
            style="@style/TextButtonStyle"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/linearProgressIndicator"
            app:layout_constraintEnd_toEndOf="@+id/linearProgressIndicator"
            app:layout_constraintStart_toStartOf="@+id/linearProgressIndicator" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/linearProgressIndicator"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="includeSearch,ivBack,tvTitle,tvSubtitle" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swpRefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/includeBottom"
            app:layout_constraintTop_toBottomOf="@+id/barrier"
            tools:layout_editor_absoluteX="0dp">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBaseList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="true"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="4"
                        tools:listitem="@layout/item_bank_layout" />

                    <Button
                        android:id="@+id/buttonBaseList"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/buttonOval"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_oval_button"
                        android:gravity="center"
                        android:paddingLeft="@dimen/margin_default"
                        android:paddingRight="@dimen/margin_default"
                        android:textAppearance="@style/TextButtonStyle"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/swpRefresh"
                        tools:text="+ Add Transportation"
                        tools:visibility="visible" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <include
            android:id="@+id/includeBottom"
            layout="@layout/button_base_list"
            app:textBottomValue="@{textBottomValue}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
