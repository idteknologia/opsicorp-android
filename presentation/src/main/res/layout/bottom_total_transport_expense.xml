<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.mobile.travelaja.utility.Utils"/>
        <variable
            name="viewModel"
            type="com.mobile.travelaja.module.settlement.viewmodel.SettlementViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="20dp"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:padding="@dimen/margin_default"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTitleTotal"
        android:text="Total Settlement"
        style="@style/TextInputLayout_Label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#939396"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@{Utils.formatCurrency(viewModel.totalTransport)}"
        style="@style/TextButtonStyle"
        android:textColor="#24253d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleTotal"
        tools:text="7.500.000"/>
    <TextView
        android:id="@+id/tvTypePrice"
        android:text="IDR"
        android:textColor="#00776a"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        style="@style/TextButtonStyle"
        app:layout_constraintBottom_toBottomOf="@+id/tvTotalValue"
        app:layout_constraintStart_toEndOf="@+id/tvTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="139dp"
        android:onClick="@{() -> viewModel.onClickSave()}"
        style="@style/ButtonStyle"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Save"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
