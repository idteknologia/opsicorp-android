<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="trip"
            type="opsigo.com.domainlayer.model.trip.Trip" />
        <variable
            name="selectedCode"
            type="String" />
        <variable
            name="selected"
            type="Boolean" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvIdTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:text="@{trip.code}"
        android:textColor="#91929e"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TP202102080001" />
    <TextView
        android:id="@+id/tv_position"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        tools:text="Position"/>
    <CheckBox
        android:id="@+id/checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:clickable="false"
        android:button="@drawable/item_check"
        android:checked="@{selected}"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:checked="true"/>
    <ImageView
        android:id="@+id/ivCenter"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:scaleType="fitXY"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvIdTrip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/checked"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_arrow_one_way"/>
    <TextView
        android:id="@+id/tvStartDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/ivCenter"
        app:layout_constraintLeft_toLeftOf="@+id/tvIdTrip"
        app:layout_constraintRight_toLeftOf="@+id/ivCenter"
        app:layout_constraintBottom_toBottomOf="@+id/ivCenter"
        android:text="@{trip.sDate()}"
        tools:text="Mon, 8 Feb 2021"
        style="@style/SubtitleTextStyle"/>

    <TextView
        android:id="@+id/tvEndDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="@{trip.eDate()}"
        app:layout_constraintTop_toTopOf="@+id/ivCenter"
        app:layout_constraintLeft_toRightOf="@+id/ivCenter"
        app:layout_constraintRight_toLeftOf="@+id/checked"
        app:layout_constraintBottom_toBottomOf="@+id/ivCenter"
        tools:text="Mon, 8 Feb 2021"
        style="@style/SubtitleTextStyle"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>