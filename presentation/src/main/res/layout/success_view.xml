<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/line_success"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_below="@+id/tv_status"
            android:textColor="#24253d"
            android:textSize="28dp"
            style="@style/RobotoRegular"
            android:text="Thank You"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        
        <TextView
            android:layout_marginTop="12sp"
            android:id="@+id/tv_message"
            android:layout_below="@+id/tv_status"
            android:textColor="#9924253d"
            android:textSize="14dp"
            style="@style/RobotoRegular"
            android:text="Please wait for Approval"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        
        <ImageView
            android:src="@drawable/succes_check"
            android:textSize="14dp"
            style="@style/RobotoRegular"
            android:id="@+id/image_success"
            android:layout_marginTop="38dp"
            android:layout_width="195dp"
            android:layout_height="155dp"/>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_message_second"
                style="@style/RobotoRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_status"
                android:text="Check your Transaction History on "
                android:textColor="#9924253d"
                android:textSize="9dp"></TextView>

            <TextView
                style="@style/RobotoRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_status"
                android:text=" manage Trip"
                android:textColor="@color/colorPrimary"
                android:textSize="9dp"></TextView>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>