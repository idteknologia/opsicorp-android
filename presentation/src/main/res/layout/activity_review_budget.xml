<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="@dimen/size_image_back"
                    android:layout_height="@dimen/size_image_back"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:id="@+id/label_create_tripplan"
                    style="@style/RobotoBold"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:layout_marginRight="@dimen/margin_default"
                    android:focusable="true"
                    android:text="@string/review_budget"
                    android:textColor="#91929e"
                    android:textSize="12sp" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/line_domestic"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:background="@drawable/rounded_button_corner_grey_97">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:orientation="vertical">

                <TextView
                    style="@style/RobotoBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cost_center"
                    android:textColor="#91929e"
                    android:textSize="14sp" />

                <EditText
                    android:singleLine="true"
                    android:id="@+id/title_cost_name"
                    android:background="@android:color/transparent"
                    style="@style/RobotoBold"
                    android:textColor="#24253d"
                    android:focusable="false"
                    android:imeOptions="actionDone"
                    android:hint="@string/cost_center"
                    android:paddingTop="8dp"
                    android:paddingBottom="9dp"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView

                android:id="@+id/tvCostNameAdd"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/change"
                android:textAllCaps="true"
                android:textColor="@color/tintTextView"
                android:textSize="14sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvCostNameReset"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/reset"
                android:textAllCaps="true"
                android:textColor="@color/tintTextView"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/layPIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="@string/pic_email_cost_center"
                android:textColor="#91929e"
                android:textSize="14sp"
                style="@style/RobotoRegular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_pic">

                <EditText
                    android:id="@+id/et_pic"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_white_stroke"
                    android:textColor="#24253d"
                    android:textSize="@dimen/font_edittext"
                    android:singleLine="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="8dp">

                </EditText>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lineCash"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#b2bbc6"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/purpose"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_purpose"
                    style="@style/RobotoBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:textColor="#24253d"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/activity"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_activity"
                    style="@style/RobotoBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:text="Dinas Residensial di tempat kedudukan"
                    android:textColor="#24253d"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/trip_route"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_trip_route"
                    style="@style/RobotoBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    tools:text="Jakarta-Surabaya-Yogyakarta-Bandung-Semarang"
                    android:textColor="#24253d"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/start_date"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_start_date"
                    style="@style/RobotoBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thu, 31 Mar 2018"
                    android:textColor="#24253d"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/end_date"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_date_end"
                    style="@style/RobotoBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thu, 31 Mar 2018"
                    android:textColor="#24253d"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlCashAd"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/layCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/labelBank"
                style="@style/RobotoRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:textSize="14sp"
                android:text="@string/bank_transfer"
                />

            <EditText
                android:id="@+id/etBank"
                style="@style/TextInputLayout_Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="40dp"
                android:drawableEnd="@drawable/ic_chevron_down"
                android:focusable="false"
                android:hint="@string/select_bank"
                android:includeFontPadding="true"
                android:inputType="none"
                android:paddingBottom="20dp"
                android:singleLine="true"
                tools:text="Bank Mandiri"
                android:layout_below="@+id/labelBank"/>

            <TextView
                android:id="@+id/tv_enter_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="@string/enter_amount"
                android:textColor="#24253d"
                android:textSize="16sp"
                style="@style/RobotoBold"
                android:layout_below="@+id/etBank"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_enter_amount">

                <EditText
                    android:id="@+id/et_min"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_border"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:textSize="14sp"
                    android:paddingRight="15dp"
                    android:singleLine="true">

                </EditText>
                <TextView
                    android:id="@+id/tv_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_marginStart="20dp"
                    android:textSize="16sp"
                    android:textColor="#2b9a8e"
                    android:text="IDR"
                    style="@style/RobotoBold" />
            </LinearLayout>

        </RelativeLayout>
            <TextView
                android:id="@+id/tv_cash_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginStart="30dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/cash_advance"
                android:textColor="#2b9a8e"
                android:textSize="18sp"
                style="@style/RobotoBold" />
        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/line_prize"
        layout="@layout/detail_price_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></include>
</RelativeLayout>