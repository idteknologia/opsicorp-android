<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="@dimen/size_image_back"
                    android:layout_height="@dimen/size_image_back"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:id="@+id/label_create_tripplan"
                    style="@style/RobotoBold"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:layout_marginRight="@dimen/margin_default"
                    android:focusable="true"
                    android:text="@string/review_budget"
                    android:textColor="#91929e"
                    android:textSize="12sp" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/line_domestic"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:background="@drawable/rounded_button_corner_grey_97">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15sp"
                android:layout_marginLeft="15sp"
                android:orientation="vertical">

                <TextView
                    style="@style/RobotoBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost Center"
                    android:textColor="#91929e"
                    android:textSize="14sp" />

                <EditText
                    android:singleLine="true"
                    android:id="@+id/title_cost_name"
                    android:background="@android:color/transparent"
                    style="@style/RobotoBold"
                    android:textColorHint="#24253d"
                    android:textColor="#24253d"
                    android:focusable="false"
                    android:imeOptions="actionDone"
                    android:text="@string/cost_center"
                    android:paddingTop="8dp"
                    android:paddingBottom="9dp"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvCostNameAdd"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:text="Change"
                android:textAllCaps="true"
                android:textColor="@color/tintTextView"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Purpose"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_purpose"
                    style="@style/RobotoBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:text="New"
                    android:textColor="#24253d"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Activity"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_activity"
                    style="@style/RobotoBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:text="Dinas Residensial di tempat kedudukan"
                    android:textColor="#24253d"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Trip Route"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_trip_route"
                    style="@style/RobotoBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:text="Yogayakarta"
                    android:textColor="#24253d"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Start Date"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_start_date"
                    style="@style/RobotoBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thu, 31 Mar 2018"
                    android:textColor="#24253d"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="End Date"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textColor="#91929e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_date_end"
                    style="@style/RobotoBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thu, 31 Mar 2018"
                    android:textColor="#24253d"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lineCash"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:background="#b2bbc6"
            android:orientation="horizontal">

        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/layCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_cash_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="15dp"
                android:text="@string/cash_advance"
                android:textColor="#24253d"
                android:textSize="16sp"
                style="@style/RobotoBold"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_cash_ad">

                <EditText
                    android:id="@+id/et_min"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/rounded_button_corner_grey_97"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="8dp">

                </EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_marginStart="20dp"
                    android:textSize="16sp"
                    android:textColor="#2b9a8e"
                    android:text="IDR"
                    style="@style/RobotoBold"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/line_prize"
        layout="@layout/detail_price_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </include>
</RelativeLayout>