<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.mobile.travelaja.utility.Utils"/>
        <variable
            name="viewModel"
            type="com.mobile.travelaja.module.settlement.viewmodel.DraftSettlementViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_default"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvLabelTripExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextLato_Bold"
        android:textSize="18sp"
        android:text="@string/trip_expense"/>

    <TextView
        android:id="@+id/tvLabelOverNight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        style="@style/TextLato_Normal"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelTripExpense"
        android:text="@string/stay_overnight"
        app:drawableStartCompat="@drawable/ic_drawable_start_dot_trip_9dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="4dp"
        style="@style/TextLato_Normal"
        android:text="@{viewModel.submitSettlement.SpecificAreaDays +` `+ @string/days}"
        android:textColor="@color/redButtonColor"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelOverNight"
        app:layout_constraintEnd_toStartOf="@+id/tvOverNightTotal"
        app:layout_constraintStart_toEndOf="@+id/tvLabelOverNight"
        app:layout_constraintTop_toTopOf="@+id/tvLabelOverNight"
        tools:text="4 Days" />


    <TextView
        android:id="@+id/tvOverNightTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLabelOverNight"
        style="@style/TextLato_Normal"
        app:formatTextIdr="@{viewModel.submitSettlement.specificAreaTariff}"
        android:textColor="@color/colorTextHint"
        tools:text="2.500.000 IDR" />

    <TextView
        android:id="@+id/tvLabelLaundry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        style="@style/TextLato_Normal"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/tvLaundryTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOverNightTotal"
        android:layout_marginEnd="16dp"
        android:text="@string/laundry"
        app:drawableStartCompat="@drawable/ic_drawable_start_dot_trip_9dp" />

    <TextView
        android:id="@+id/tvLaundryTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLabelLaundry"
        style="@style/TextLato_Normal"
        app:formatTextIdr="@{viewModel.submitSettlement.amountLaundry}"
        android:textColor="@color/colorTextHint"
        tools:text="2.500.000 IDR" />

    <TextView
        android:id="@+id/tvLabelTransportExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        style="@style/TextLato_Normal"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/tvTransportExpenseTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLaundryTotal"
        android:layout_marginEnd="16dp"
        android:text="@string/airport_non_airport_trip_expense"
        app:drawableStartCompat="@drawable/ic_drawable_start_dot_trip_9dp" />

    <TextView
        android:id="@+id/tvTransportExpenseTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLabelTransportExpense"
        style="@style/TextLato_Normal"
        app:formatTextIdr="@{viewModel.submitSettlement.TotalTransportExpense}"
        android:textColor="@color/colorTextHint"
        tools:text="2.500.000 IDR" />

    <TextView
        android:id="@+id/tvLabelTransportIntercity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        style="@style/TextLato_Normal"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/tvTransportIntercityTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTransportExpenseTotal"
        android:layout_marginEnd="16dp"
        android:text="@string/title_intercity_transport"
        app:drawableStartCompat="@drawable/ic_drawable_start_dot_trip_9dp" />

    <TextView
        android:id="@+id/tvTransportIntercityTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:formatTextIdr="@{viewModel.submitSettlement.totalOtherTransportExpense}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLabelTransportIntercity"
        style="@style/TextLato_Normal"
        android:textColor="@color/colorTextHint"
        tools:text="2.500.000 IDR" />

    <TextView
        android:id="@+id/tvLabelOtherExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        style="@style/TextLato_Normal"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/tvOtherExpenseTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTransportIntercityTotal"
        android:layout_marginEnd="16dp"
        android:text="@string/other_expense"
        app:drawableStartCompat="@drawable/ic_drawable_start_dot_trip_9dp" />

    <TextView
        android:id="@+id/tvOtherExpenseTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLabelOtherExpense"
        style="@style/TextLato_Normal"
        app:totalValueIdr="@{viewModel.submitSettlement.totalOtherExpense}"
        app:totalValueUsd="@{viewModel.submitSettlement.totalOtherExpenseUSD}"
        android:textColor="@color/colorTextHint"
        tools:text="2.500.000 IDR" />

    <View
        android:id="@+id/divider"
        style="@style/Divider"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvOtherExpenseTotal"/>

    <TextView
        android:id="@+id/tvLabelTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        style="@style/TextLato_Bold"
        android:textSize="16sp"
        android:textColor="#009688"
        android:text="@string/total"
        app:layout_constraintTop_toBottomOf="@+id/divider" />
    <TextView
        android:id="@+id/tvTotalIdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tvLabelTotal"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextLato_Bold"
        tools:text="9.170.000 IDR"/>

    <TextView
        android:id="@+id/tvTotalUsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalIdr"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextLato_Bold"
        android:layout_marginTop="12dp"
        tools:text="300 USD"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
