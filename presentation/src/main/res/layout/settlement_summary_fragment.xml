<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.mobile.travelaja.utility.Utils"/>
        <variable
            name="viewModel"
            type="com.mobile.travelaja.module.settlement.viewmodel.DraftSettlementViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/ivChangeEdit"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_image_back"
            android:layout_gravity="center"
            android:scaleType="center"
            android:enabled="@{!viewModel.loading}"
            android:textAppearance="@style/TextButtonStyle"
            android:textColor="#2b9a8e"
            app:icon="@drawable/ic_back"
            app:iconPadding="20dp"
            app:iconTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/linearProgressIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="@{viewModel.loading ? View.VISIBLE : View.GONE}"
            tools:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/ivChangeEdit"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/margin_default"
            app:layout_constraintBottom_toTopOf="@+id/buttonReject"
            app:layout_constraintTop_toBottomOf="@+id/linearProgressIndicator">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTotalAmountLabel"
                    style="@style/TextLato_Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginTop="@dimen/margin_default"
                    android:text="Total Amount: "
                    android:textColor="#24253d"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tvTotalValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/TextLato_Bold"
                    android:text="@{@string/other_expense_usd+` `+Utils.formatCurrency(viewModel.submitSettlement.TotalExpenseSubmit)}"
                    app:layout_constraintTop_toBottomOf="@+id/tvTotalAmountLabel"
                    android:textSize="20sp"
                    android:textColor="#009688"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginTop="6dp"
                    tools:text="IDR 3.095.800"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/containerTopDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:paddingStart="@dimen/margin_default"
                    android:paddingTop="@dimen/margin_default"
                    android:paddingEnd="@dimen/margin_default"
                    android:paddingBottom="27dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTotalValue">

                    <ImageView
                        android:id="@+id/ivQR"
                        android:layout_width="64dp"
                        android:layout_height="0dp"
                        app:generateQrCode="@{viewModel.submitSettlement.tripCode}"
                        app:layout_constraintBottom_toTopOf="@+id/shareQa"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvTypeRoute"
                        tools:background="#efefef" />

                    <View
                        android:id="@+id/view7"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/divider"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ivQR"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/shareQa"
                        style="@style/TextLato_Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/share_qr"
                        android:textColor="#939396"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@+id/ivQR"
                        app:layout_constraintStart_toStartOf="@+id/ivQR"
                        app:layout_constraintTop_toTopOf="@+id/tvTimeCreated" />

                    <TextView
                        android:id="@+id/tvTypeRoute"
                        style="@style/TextLato_Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_approval_gray"
                        android:paddingStart="10dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="3dp"
                        android:text="@{viewModel.submitSettlement.routeType}"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="International route" />

                    <TextView
                        android:id="@+id/tvLabelTripCode"
                        style="@style/TextLato_Normal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/trip_code"
                        android:textColor="#b2bbc6"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toStartOf="@+id/view7"
                        app:layout_constraintStart_toStartOf="@+id/tvTypeRoute"
                        app:layout_constraintTop_toBottomOf="@+id/tvTypeRoute" />

                    <TextView
                        android:id="@+id/tvTripCode"
                        style="@style/TextLato_Bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:drawableStart="@drawable/ic_icon_copy"
                        android:drawablePadding="6dp"
                        android:text="@{viewModel.submitSettlement.tripCode}"
                        app:layout_constraintEnd_toEndOf="@+id/tvLabelTripCode"
                        app:layout_constraintStart_toStartOf="@+id/tvLabelTripCode"
                        app:layout_constraintTop_toBottomOf="@+id/tvLabelTripCode"
                        tools:text="TP201802080003" />

                    <TextView
                        android:id="@+id/tvTimeCreated"
                        style="@style/TextLato_Normal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@{`Created : `+viewModel.submitSettlement.CreatedDateView}"
                        app:layout_constraintEnd_toEndOf="@+id/tvLabelTripCode"
                        app:layout_constraintStart_toStartOf="@+id/tvTripCode"
                        app:layout_constraintTop_toBottomOf="@+id/tvTripCode"
                        tools:text="Created : 29 Maret 2021 - 09:46"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/containerConference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:background="@drawable/bg_dialog_rounded_detail_trip"
                    android:elevation="10dp"
                    android:paddingStart="@dimen/margin_default"
                    android:paddingTop="@dimen/margin_default"
                    android:paddingEnd="@dimen/margin_default"
                    android:paddingBottom="@dimen/margin_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/containerTopDetail">

                    <TextView
                        android:id="@+id/tvNameBoardDate"
                        style="@style/TextLato_Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.submitSettlement.purpose}"
                        android:textColor="#009688"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Conference Board April 2021" />

                    <TextView
                        android:id="@+id/tvLabelActivityType"
                        style="@style/TextLato_Normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/activity_type"
                        android:textColor="#b2bbc6"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvNameBoardDate" />

                    <TextView
                        android:id="@+id/tvActivityType"
                        style="@style/TextLato_Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@{viewModel.submitSettlement.tripType}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvLabelActivityType"
                        tools:text="Dinas Res Luar Kota" />

                    <ImageView
                        android:id="@+id/icPlace"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_point_gps_2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvActivityType"
                        app:tint="@color/colorRed" />

                    <TextView
                        android:id="@+id/tvListRoute"
                        style="@style/TextLato_Normal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@{viewModel.submitSettlement.nameCities()}"
                        android:textColor="#939396"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/icPlace"
                        app:layout_constraintTop_toTopOf="@+id/icPlace"
                        tools:text="Singapore - Jakarta - Argentina - Hongkong - Saudi Arabia" />

                    <TextView
                        android:id="@+id/tvStartDate"
                        style="@style/SubtitleTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@{Utils.convertDate(viewModel.submitSettlement.startDate,`EEE, d MMM yyyy`)}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvListRoute"
                        tools:text="Mon, 8 Feb 2021" />

                    <ImageView
                        android:id="@+id/icDestTime"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_arrow_one_way"
                        app:layout_constraintBottom_toBottomOf="@+id/tvStartDate"
                        app:layout_constraintStart_toEndOf="@+id/tvStartDate"
                        app:layout_constraintTop_toTopOf="@+id/tvStartDate" />

                    <TextView
                        android:id="@+id/tvEndDate"
                        style="@style/SubtitleTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@{Utils.convertDate(viewModel.submitSettlement.endDate,`EEE, d MMM yyyy`)}"
                        app:layout_constraintStart_toEndOf="@+id/icDestTime"
                        app:layout_constraintTop_toTopOf="@+id/tvStartDate"
                        tools:text="Mon, 8 Feb 2021" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tvParticipants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/containerConference"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/TextLato_Bold"
                    android:visibility="@{viewModel.passengers.size() > 0 ? View.VISIBLE : View.GONE}"
                    android:textSize="16sp"
                    android:layout_marginTop="33dp"
                    android:layout_marginStart="@dimen/margin_default"
                    android:text="@string/participant"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/containerParticipant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_default"
                    android:paddingEnd="@dimen/margin_default"
                    app:layout_constraintTop_toBottomOf="@+id/tvParticipants"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/tvType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/rounded_approval_gray"
                        android:backgroundTint="#009688"
                        android:paddingStart="@dimen/margin_default"
                        android:paddingEnd="@dimen/margin_default"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="@{viewModel.submitSettlement.PositionName}"
                        style="@style/TextLato_Bold"
                        android:textSize="10sp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        tools:text="Adult"/>
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextLato_Bold"
                        android:layout_marginTop="8dp"
                        android:text="@{viewModel.submitSettlement.EmployeeName}"
                        tools:text="Lionel Messi"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/tvType"
                        app:layout_constraintStart_toStartOf="@+id/tvType"/>

                    <TextView
                        android:id="@+id/tvBudget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/tvName"
                        app:layout_constraintStart_toStartOf="@+id/tvType"
                        style="@style/TextLato_Normal"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        tools:text="B1000089 - Budget si Mamang" />

                    <TextView
                        android:id="@+id/tvValueItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        style="@style/TextLato_Bold"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="#009688"
                        tools:text="3 items"/>

                    <ImageView
                        android:id="@+id/icChevron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_next_orange"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvValueItems" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tvParticipantLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextLato_Normal"
                    android:visibility="@{viewModel.passengers.size() > 0 ? View.GONE : View.GONE}"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    tools:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/tvParticipants"
                    app:layout_constraintStart_toStartOf="@id/tvParticipants"
                    android:text="Click list for participant detail"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvParticipants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/tvParticipantLabel"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    tools:listitem="@layout/settlement_item_personal_summary"
                    tools:itemCount="5"/>

                <TextView
                    android:id="@+id/tvNotesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notes"
                    style="@style/TextLato_Bold"
                    android:visibility="@{viewModel.submitSettlement.comment.empty || viewModel.submitSettlement.comment == null ? View.GONE : View.VISIBLE}"
                    android:textColor="#00776a"
                    android:textSize="16sp"
                    android:layout_marginTop="33dp"
                    android:layout_marginStart="@dimen/margin_default"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/containerParticipant"/>
                <TextView
                    android:id="@+id/tvNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_default"
                    tools:text="@string/lorem_ipsum"
                    android:visibility="@{viewModel.submitSettlement.comment.empty || viewModel.submitSettlement.comment == null? View.GONE : View.VISIBLE}"
                    android:text="@{viewModel.submitSettlement.comment}"
                    style="@style/TextLato_Normal"
                    android:textSize="12sp"
                    android:textColor="#212121"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="@dimen/margin_default"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNotesLabel"/>
                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:visibility="@{viewModel.submitSettlement.attachments.size() > 0 ? View.VISIBLE : View.GONE}"
                    android:background="@drawable/dash_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/tvNotes"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"/>
                <TextView
                    android:id="@+id/tvAttachmentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/attachment_files"
                    style="@style/TextLato_Bold"
                    android:visibility="@{viewModel.submitSettlement.attachments.size() > 0 ? View.VISIBLE : View.GONE}"
                    android:textColor="#00776a"
                    android:textSize="16sp"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="@dimen/margin_default"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divider"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:orientation="vertical"
                    android:scrollbars="none"
                    android:visibility="@{viewModel.submitSettlement.attachments.size() > 0 ? View.VISIBLE : View.GONE}"
                    app:addAttachments="@{viewModel.submitSettlement.attachments}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/tvAttachmentLabel"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_attachment_settlement" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/buttonReject"
            style="@style/ButtonStyle_Secondary_outline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:enabled="@{!viewModel.loading}"
            android:visibility="@{viewModel.submitSettlement.ShowButtonApprove ? View.VISIBLE : View.GONE}"
            android:text="@string/reject_all"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="@dimen/margin_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonApprove"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonApprove"
            style="@style/ButtonStyle_Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:enabled="@{!viewModel.loading}"
            android:visibility="@{viewModel.submitSettlement.ShowButtonApprove ? View.VISIBLE : View.GONE}"
            android:text="@string/approve_all"
            android:layout_marginEnd="@dimen/margin_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonReject"
            app:layout_constraintTop_toTopOf="@+id/buttonReject" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
