<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="63dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:gravity="left"
    android:id="@+id/layBox"
    android:background="@android:color/transparent"
    android:orientation="horizontal" >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/line_first"
        android:layout_width="37dp"
        android:layout_height="match_parent"></LinearLayout>

    <LinearLayout
        android:layout_marginRight="13dp"
        android:background="@drawable/rounded_gray_stroke_2"
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/rounded_green_left_corner"
            android:gravity="center"
            android:id="@+id/layTop"
            android:orientation="horizontal"
            android:layout_width="39dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_day_number"
                    style="@style/RobotoBold"
                    android:textColor="#ffffff"
                    android:text="27"
                    android:textSize="17.3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_mount"
                    android:text="Mar"
                    style="@style/RobotoBold"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:text=""
                android:background="@color/white"
                android:layout_width="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_day_text1"
                android:layout_gravity="center"
                android:textColor="@color/colorRed"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="S"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_day_text2"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:text="UN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:singleLine="true"
                        style="@style/RobotoRegular"
                        android:id="@+id/tv_tipe_tour"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#b2bbc6"
                        android:layout_marginRight="5dp"
                        android:text="Meeting gwydchudyusg"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <TextView
                    style="@style/RobotoMedium"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/tv_destination"
                    android:layout_marginLeft="10dp"
                    android:text="CGK - DPS"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#24253d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ic_61_time"
                        android:layout_width="12dp"
                        android:layout_height="12dp" />

                    <TextView
                        style="@style/RobotoMedium"
                        android:id="@+id/tv_today"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="Today"
                        android:textColor="@color/color_gray_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        style="@style/RobotoMedium"
                        android:id="@+id/tv_time"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="- 20:00"
                        android:textColor="@color/gray_333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/btn_upcomming_trip"
                android:layout_width="18dp"
                android:layout_height="21dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
