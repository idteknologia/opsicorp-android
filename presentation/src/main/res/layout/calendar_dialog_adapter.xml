<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/line_border_calendar"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_calendar_deafult"
        android:padding="2dp"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_calendar_inside_top">

            <TextView
                android:id="@+id/tv_day_name"
                style="@style/RobotoBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#91929e"
                android:gravity="center_horizontal"
                android:text="MON"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tv_date"
                style="@style/RobotoBold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="#24253d"
                android:gravity="center"
                android:text="28"/>

            <TextView
                android:id="@+id/tv_mount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#b2bbc6"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="5dp"
                style="@style/RobotoBold"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="JAN"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/rounded_calendar_inside_bottom">

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    style="@style/RobotoBold"
                    android:textColor="#b2bbc6"
                    android:gravity="center_horizontal"
                    android:text="IDR "/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    style="@style/RobotoBold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_horizontal"
                    android:text="140.000"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>