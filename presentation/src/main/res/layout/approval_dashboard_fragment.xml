<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/nested_view"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="24dp"
            android:textColor="#24253d"
            style="@style/RobotoRegular"
            android:layout_marginTop="63dp"
            android:layout_marginLeft="20dp"
            android:text="Hi, Approver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/tv_date"
            android:textAlignment="textStart"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="#91929e"
            style="@style/RobotoRegular"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:text="Today: 1 September 2019"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            tools:ignore="RtlCompat" />
        
        
        <RelativeLayout
            android:id="@+id/line_search"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_search_edittext"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="46dp">


            <ImageView
                android:id="@+id/ic_search"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_search"
                android:layout_width="21dp"
                android:layout_height="21dp" />

            <EditText
                android:id="@+id/tv_search_approval"
                android:layout_marginLeft="10sp"
                android:textSize="12sp"
                android:background="@android:color/transparent"
                android:layout_toRightOf="@+id/ic_search"
                android:textColor="#24253d"
                android:textColorHint="#24253d"
                android:hint="@string/et_search_filter_approval"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <FrameLayout
            android:layout_marginBottom="13dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.opsigo.travelaja.module.item_custom.button_top_filter_approval.ButtonTopFilterApproval
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_filter_approval">
            </com.opsigo.travelaja.module.item_custom.button_top_filter_approval.ButtonTopFilterApproval>

        </FrameLayout>



        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_marginBottom="54dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/ic_waiting_bg"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="144dp">

                    <TextView
                        android:id="@+id/tv_waiting_for_approval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="54sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:text="207" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17.2sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:text="@string/waiting_for_approval" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="13dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@drawable/ic_rejected_bg"
                        android:orientation="vertical"
                        android:gravity="center|start"
                        android:layout_marginRight="6.5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="146dp">

                        <TextView
                            android:id="@+id/tv_total_rejected"
                            android:layout_marginLeft="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="54sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:text="124" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:fontFamily="sans-serif"
                            android:textColor="#ffffff"
                            android:textSize="17.2sp"
                            android:textStyle="bold"
                            android:text="@string/rejected" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/ic_approved_bg"
                        android:orientation="vertical"
                        android:gravity="center|end"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="6.5dp"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="146dp">

                        <TextView
                            android:id="@+id/tv_total_approved"
                            android:layout_marginRight="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="54sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:text="410" />

                        <TextView
                            android:layout_marginRight="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17.2sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:text="@string/approved" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="13dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@drawable/ic_partially_rejected_bg"
                        android:orientation="vertical"
                        android:gravity="center|end"
                        android:layout_marginRight="6.5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="146dp">

                        <TextView
                            android:id="@+id/tv_total_partially_rejected"
                            android:layout_marginRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="54sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:text="120" />

                        <TextView
                            android:layout_marginRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17.2sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:text="@string/partially_rejected" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/ic_partially_approved_bg"
                        android:orientation="vertical"
                        android:gravity="center|start"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="6.5dp"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="146dp">

                        <TextView
                            android:id="@+id/tv_total_partially_approved"
                            android:layout_marginLeft="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="54sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:text="50" />

                        <TextView
                            android:layout_marginLeft="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17.2sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:text="@string/partially_approved" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="43dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="68dp">

                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/half_rounded_list_approval"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_list_approval"
                            android:layout_marginRight="11dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:text="911"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12.4sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:text="@string/list_of_your_approval"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_see_all"
                        android:background="@drawable/half_rounded_see_all"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginLeft="19dp"
                            android:layout_marginRight="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12.4sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:gravity="end"
                            android:text="@string/see_all"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>