<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <com.opsigo.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content">

    </com.opsigo.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_baggage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8d8">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#939396"
                android:text="@string/baggage_charge"
                android:layout_marginStart="20dp" />

            <TextView
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#24253d"
                android:gravity="end"
                android:text="@string/total_price"
                android:layout_centerVertical="true"
                android:layout_marginEnd="42dp"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:id="@+id/ic_image"
                android:layout_gravity="center"
                android:src="@drawable/ic_chevron_up_orange"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="13dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="13dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#d8d8d8">
        </LinearLayout>

        <com.opsigo.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="29dp"
            app:text="Done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.opsigo.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp>
    </LinearLayout>
</RelativeLayout>