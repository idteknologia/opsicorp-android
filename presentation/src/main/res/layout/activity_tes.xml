<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white">

<!--    <android.support.v7.widget.RecyclerView-->
<!--        android:emplaoyId="@+emplaoyId/rv_result_accomodation_search"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->

<!--    </android.support.v7.widget.RecyclerView>-->

    <com.mobile.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">
    </com.mobile.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp>

    <TextView
        android:gravity="center"
        android:id="@+id/tv_title"
        android:textSize="24dp"
        android:textColor="#24253d"
        style="@style/RobotoRegular"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:text="Join Trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_title_two"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="17dp"
        android:textColor="#91929e"
        style="@style/RobotoRegular"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:text="Join other trip with trip code"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        tools:ignore="RtlCompat" />


    <RelativeLayout
        android:layout_marginBottom="30dp"
        android:id="@+id/line_search"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:background="@drawable/rounded_search_edittext"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="46dp">


        <ImageView
            android:id="@+id/ic_search"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search"
            android:layout_width="21dp"
            android:layout_height="21dp" />

        <EditText
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:id="@+id/tv_search_approval"
            android:layout_marginLeft="10sp"
            android:textSize="12sp"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@+id/ic_search"
            android:textColor="#24253d"
            android:textColorHint="#24253d"
            android:hint="Search by Trip code, barcode , dll"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.mobile.travelaja.module.item_custom.barcode.scanner.ScannerOpsicorp
        android:id="@+id/scanner_barcode"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.mobile.travelaja.module.item_custom.barcode.scanner.ScannerOpsicorp>

</LinearLayout>
