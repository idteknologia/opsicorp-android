<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        app:shimmer_auto_start="true"
        android:layout_height="wrap_content"
        android:id="@+id/shimmer_view_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginLeft="@dimen/margin_default"
            android:elevation="3dp"
            android:background="@drawable/card_background">

            <RelativeLayout
                android:paddingTop="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="62.5dp">

                <LinearLayout
                    android:paddingLeft="10dp"
                    android:layout_toEndOf="@+id/img_flight_icon"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/img_flight_icon">

                    <TextView
                        android:id="@+id/tv_title_train"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Garuda Indonesia"
                        android:background="#dddddd"
                        android:textColor="#dddddd"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="14dp"
                    android:gravity="end"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_type_class"
                        android:text="Economy (C)"
                        android:background="#dddddd"
                        android:textColor="#dddddd"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:background="#dddddd"
                        android:textColor="#dddddd"
                        android:id="@+id/tv_number_sheet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="10sp" />
                </LinearLayout>



                <TextView
                    android:id="@+id/tv_price"
                    style="@style/RobotoBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="26dp"
                    android:layout_marginRight="37dp"
                    android:text="IDR 1.275.000"
                    android:background="#dddddd"
                    android:textColor="#dddddd"
                    android:textSize="14sp" />

                <TextView
                    style="@style/RobotoRegular"
                    android:textSize="10sp"
                    android:layout_marginRight="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="28.5dp"
                    android:text="@string/per_pax"
                    android:background="#dddddd"
                    android:textColor="#dddddd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:visibility="invisible"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/line_image_train"
                    android:layout_width="17dp"
                    android:layout_height="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45.5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd">
                </LinearLayout>

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_destination"
                        style="@style/RobotoBold"
                        android:background="#dddddd"
                        android:textColor="#dddddd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CGK - JOG"
                        android:textSize="11dp" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/tv_time_departure"
                        style="@style/RobotoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06:40 - 08:35"
                        android:background="#dddddd"
                        android:textColor="#dddddd"
                        android:textSize="14dp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:layout_marginRight="14sp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/RobotoBold"
                        android:background="#dddddd"
                        android:textColor="#dddddd"
                        android:text="@string/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"/>

                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/tv_duration"
                        style="@style/RobotoBold"
                        android:background="#dddddd"
                        android:textColor="#dddddd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1h, 30m"
                        android:textSize="14dp" />
                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>




</LinearLayout>