<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btn_this_month"
                android:background="@drawable/rounded_button_filter"
                android:layout_width="91dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_this_month"
                    android:textSize="14sp"
                    style="@style/RobotoBlack"
                    android:gravity="center"
                    android:text="Today"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_last_week"
                android:background="@drawable/rounded_button_filter"
                android:layout_marginLeft="10dp"
                android:layout_width="91dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_last_week"
                    android:textSize="14dp"
                    style="@style/RobotoBlack"
                    android:gravity="center"
                    android:text="One week"
                    android:layout_width="match_parent"
                    android:layout_height="36dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_last_month"
                android:background="@drawable/rounded_button_filter"
                android:layout_marginLeft="10dp"
                android:layout_width="91dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_last_month"
                    android:textSize="14dp"
                    style="@style/RobotoBlack"
                    android:gravity="center"
                    android:text="30 days"
                    android:layout_width="match_parent"
                    android:layout_height="36dp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>