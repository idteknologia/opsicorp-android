<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="15dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvSuperiorRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="9dp"
        style="@style/TextLato_Bold"
        android:text="Superior Room"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        style="@style/TextLato_Normal"
        android:textSize="10sp"
        android:textColor="#939396"
        app:layout_constraintStart_toStartOf="@+id/tvSuperiorRoom"
        app:layout_constraintTop_toBottomOf="@id/tvSuperiorRoom"
        tools:text="Max 2 Guest/room" />

    <TextView
        android:id="@+id/tvValueRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_default"
        app:layout_constraintBottom_toBottomOf="@+id/tvGuest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextLato_Normal"
        android:textSize="12sp"
        android:textColor="#2b9a8e"
        tools:text="2 Room(s)" />

    <View
        android:id="@+id/view6"
        style="@style/Divider"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvGuest" />

    <TextView
        android:id="@+id/tvBreakfast"
        style="@style/TextLato_Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/ic__6_meal"
        android:drawablePadding="10dp"
        android:text="Breakfast"
        android:textColor="#24253d"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6" />

    <TextView
        android:id="@+id/tvFreeWifi"
        style="@style/TextLato_Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:drawableStart="@drawable/ic_wi_fi"
        android:drawablePadding="10dp"
        android:text="Free Wifi"
        android:textColor="#24253d"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tvBreakfast"
        app:layout_constraintTop_toBottomOf="@+id/tvBreakfast" />

    <TextView
        android:id="@+id/tvNoSmoking"
        style="@style/TextLato_Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:drawableStart="@drawable/ic_no_smoking"
        android:drawablePadding="10dp"
        android:text="No Smoking"
        android:textColor="#24253d"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tvBreakfast"
        app:layout_constraintTop_toBottomOf="@+id/tvFreeWifi" />

    <TextView
        android:id="@+id/tvNoBreakfastNotInclude"
        style="@style/TextLato_Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:drawableStart="@drawable/ic__6_meal"
        android:drawablePadding="10dp"
        android:text="Breakfast not included (Room only)"
        android:textColor="#24253d"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tvBreakfast"
        app:layout_constraintTop_toBottomOf="@+id/tvNoSmoking" />

</androidx.constraintlayout.widget.ConstraintLayout>