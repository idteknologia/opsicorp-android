<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="9dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="@dimen/margin_default"
    android:layout_marginLeft="@dimen/margin_default"
    android:clipToPadding="false"
    android:background="@drawable/card_background_under_api_21">
    
    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="12dp"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="62.5dp">

        <ImageView
            android:id="@+id/img_flight_icon"
            android:adjustViewBounds="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/sriwijaya" />

        <LinearLayout
            android:layout_toEndOf="@+id/img_flight_icon"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img_flight_icon">

            <TextView
                android:id="@+id/title_airline"
                style="@style/RobotoRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garuda Indonesia"
                android:textColor="#24253d"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_type_class"
                android:textColor="#b2bbc6"
                android:text="Economy (C)"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GA-21"
                android:textColor="#24253d"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_comply"
                style="@style/RobotoBold"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Comply"
                android:textColor="#eb0011"
                android:textSize="10sp" />

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/tv_price"
                    style="@style/RobotoBold"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDR 1.275.000"
                    android:textColor="#24253d"
                    android:textSize="14sp" />

                <TextView
                    android:visibility="gone"
                    style="@style/RobotoRegular"
                    android:textColor="#b2bbc6"
                    android:textSize="10sp"
                    android:layout_marginRight="14dp"
                    android:text="/pax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="end">
            <TextView
                android:visibility="visible"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR "
                android:textColor="@color/green_price"
                android:textSize="10sp" />
            <TextView
                android:visibility="visible"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / pax"
                android:textColor="@color/colorMaterialGrey"
                android:textSize="10sp" />
        </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="45.5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d8">
        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_destination"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CGK - JOG"
                android:textColor="#b2bbc6"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_time_departure"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:40 - 08:35"
                android:textColor="#24253d"
                android:textSize="12sp" />
        </LinearLayout>



        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/RobotoBold"
                android:textColor="#b2bbc6"
                android:text="Duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_duration"
                style="@style/RobotoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1h, 30m"
                android:textColor="#91929e"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/RobotoBold"
                    android:textColor="#b2bbc6"
                    android:text="Stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_gravity="end" />

                <TextView
                    android:id="@+id/tv_transit"
                    style="@style/RobotoBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Direct"
                    android:textColor="#24253d"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_chevron_down"
                android:layout_width="12dp"
                android:layout_height="17dp" />


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>