<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="79dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:id="@+id/layBox"
    android:background="@drawable/bg_item_upcoming_approved"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:textStyle="bold"
        android:textSize="17.3sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        tools:text="23"/>
    <TextView
        android:id="@+id/tvMonth"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        tools:text="Apr"
        />

    <TextView
        android:id="@+id/tvDateSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/lato_regular"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvDate"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Today - 02.00" />

    <TextView
        android:id="@+id/tvPurposeTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDateSchedule"
        app:layout_constraintLeft_toLeftOf="@+id/tvDateSchedule"
        style="@style/SubtitleTextStyle"
        android:textSize="14sp"
        tools:text="Meeting" />

    <TextView
        android:id="@+id/tvDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:textStyle="normal"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:textColor="#91929e"
        app:layout_constraintTop_toBottomOf="@+id/tvPurposeTrip"
        app:layout_constraintLeft_toLeftOf="@+id/tvDateSchedule"
        tools:text="Jakarta - Denpasar - Solo - Makassar - Palembang" />
</androidx.constraintlayout.widget.ConstraintLayout>
