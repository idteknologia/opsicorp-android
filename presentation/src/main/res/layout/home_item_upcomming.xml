<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:id="@+id/layBox"
    android:background="@drawable/bg_item_upcoming_approved"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:textStyle="bold"
        android:textSize="17.3sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        tools:text="23"/>
    <TextView
        android:id="@+id/tvMonth"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        tools:text="Apr"
        />

    <TextView
        android:id="@+id/tvDateSchedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/lato_regular"
        android:layout_marginEnd="12dp"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvDate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Today" />

    <TextView
        android:id="@+id/tvPurposeTrip"
        style="@style/TextLato_Bold"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="16dp"
        android:textColor="#00776a"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tvDateSchedule"
        app:layout_constraintTop_toBottomOf="@+id/tvDestination"
        tools:text="Perjalanan dinas luar kota ke kilang minyak seluruh Indonesia" />

    <TextView
        android:id="@+id/tvDestination"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/lato_regular"
        android:textColor="#91929e"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/tvMonth"
        app:layout_constraintLeft_toLeftOf="@+id/tvDateSchedule"
        app:layout_constraintTop_toBottomOf="@+id/tvDateSchedule"
        tools:text="Jakarta - Denpasar - Solo - Makassar - Palembang - hgfjghfjhfjhgfjgh fjgh fjghf jhgf jhgj ghfjhg fjghfjgh h" />
</androidx.constraintlayout.widget.ConstraintLayout>
