<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default">

        <TextView
            style="@style/RobotoRegular"
            android:textSize="20dp"
            android:text="@string/profile"
            android:textColor="#00776a"
            android:layout_marginTop="39dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="23dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp">
                <com.mobile.travelaja.module.item_custom.circle_image.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:civ_border_color="#f5f5f5"
                    android:src="#f5f5f5"
                    android:id="@+id/img_profile"
                    app:civ_circle_background_color="#f5f5f5"/>

                <ImageView
                    android:id="@+id/img_dummy"
                    android:padding="20dp"
                    android:src="@drawable/ic_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>


            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:textColor="#24253d"
                    style="@style/RobotoRegular"
                    android:textSize="17dp"
                    android:text="Dwi Wahyudi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_position"
                    android:text="000588 - Manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/RobotoRegular"
                    android:textColor="#9924253d"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/ic_place"
                        android:src="@drawable/ic_place_gray"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_toRightOf="@+id/ic_place"
                        android:text="Gambir, Jakarta"
                        android:textColor="#8024253d"
                        android:textSize="12dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/ic_address"
                        android:src="@drawable/ic_email"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:textColor="#8024253d"
                        style="@style/RobotoRegular"
                        android:textSize="12sp"
                        android:layout_marginLeft="7dp"
                        android:layout_toRightOf="@+id/ic_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="dwi.wahyudi@opsigo.com"/>


                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_marginLeft="7dp"
                android:layout_toEndOf="@+id/img_airline"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_tripplan"
                android:textSize="17sp"
                android:textColor="#24253d"
                style="@style/RobotoRegular"
                android:layout_toRightOf="@+id/img_airline" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_chevron_next"/>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e1"/>
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:id="@+id/tv_join_trip"
                android:layout_marginLeft="7dp"
                android:layout_toEndOf="@+id/img_airline"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/join_trip"
                android:textSize="17sp"
                android:textColor="#24253d"
                style="@style/RobotoRegular"
                android:layout_toRightOf="@+id/img_airline" />

            <ImageView
                android:id="@+id/ic_join_trip"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_chevron_next"/>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_marginLeft="7dp"
                android:layout_toEndOf="@+id/img_airline"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/travel_expense_detail"
                android:textSize="17sp"
                android:textColor="#24253d"
                style="@style/RobotoRegular"
                android:layout_toRightOf="@+id/img_airline" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_chevron_next"/>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_language"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_marginLeft="7dp"
                android:layout_toEndOf="@+id/img_airline"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language"
                android:textSize="17sp"
                android:textColor="#24253d"
                style="@style/RobotoRegular"
                android:layout_toRightOf="@+id/img_airline" />

            <TextView
                android:id="@+id/tv_language"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="7dp"
                android:layout_toEndOf="@+id/img_airline"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/used_language"
                android:textSize="12sp"
                android:textColor="#8024253d"
                style="@style/RobotoRegular"
                android:layout_toRightOf="@+id/img_airline" />


            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_chevron_next"/>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_personal"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_marginLeft="7dp"
                android:layout_toEndOf="@+id/img_airline"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_information"
                android:textSize="17sp"
                android:textColor="#24253d"
                style="@style/RobotoRegular"
                android:layout_toRightOf="@+id/img_airline" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_chevron_next"/>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_settings"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_marginLeft="7dp"
                android:layout_toEndOf="@+id/img_airline"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textSize="17sp"
                android:textColor="#24253d"
                style="@style/RobotoRegular"
                android:layout_toRightOf="@+id/img_airline" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_chevron_next"/>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_marginLeft="7dp"
                android:layout_toEndOf="@+id/img_airline"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faq_help"
                android:textSize="17sp"
                android:textColor="#24253d"
                style="@style/RobotoRegular"
                android:layout_toRightOf="@+id/img_airline" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_chevron_next"/>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_privacy"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_marginLeft="7dp"
                android:layout_toEndOf="@+id/img_airline"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                android:textSize="17sp"
                android:textColor="#24253d"
                style="@style/RobotoRegular"
                android:layout_toRightOf="@+id/img_airline" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_chevron_next"/>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:id="@+id/tv_version"
                android:layout_marginLeft="7dp"
                android:layout_toEndOf="@+id/img_airline"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver 1.0.5"
                android:textSize="17sp"
                android:textColor="#24253d"
                style="@style/RobotoRegular"
                android:layout_toRightOf="@+id/img_airline" />

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e1"/>
        </RelativeLayout>


        <com.mobile.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp
            android:layout_width="match_parent"
            android:layout_marginTop="64dp"
            android:id="@+id/btn_logout"
            android:layout_marginBottom="90dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>