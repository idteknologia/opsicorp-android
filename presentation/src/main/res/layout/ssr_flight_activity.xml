<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <com.opsigo.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content">

    </com.opsigo.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp>


    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/line_body"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPassengerSsr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:text="Passenger"
            android:textColor="#24253d"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp" />

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#00776a"
            android:text="Departure Flight"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>-->


        <RelativeLayout
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<ImageView
                android:id="@+id/img_airline"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:background="@color/black">
            </ImageView>

            <TextView
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img_airline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#24253d"
                android:text="CGK - KNO"
                android:layout_toRightOf="@+id/img_airline"/>

            <TextView
                style="@style/RobotoBold"
                android:id="@+id/tvPickSsr"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#009688"
                android:gravity="end"
                android:text="Change"/>-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvSsr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <!--<TextView
            style="@style/RobotoRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="#24253d"
            android:text="Fried Rice &amp; Sausage, Mac &amp; Cheese"/>-->



    </LinearLayout>


    <LinearLayout
        android:id="@+id/line_shadow"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc000000"
        android:visibility="gone"></LinearLayout>

    <LinearLayout
        android:elevation="3dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/shadow_top"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d8d8d8">

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitleSsr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/ssr_charge"
                    android:textColor="#939396"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvTotalPriceSsr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="42dp"
                    android:layout_marginRight="20dp"
                    android:gravity="end"
                    android:text="@string/total_price"
                    android:textColor="#24253d"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/icImageSsr"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginRight="22dp"
                    android:src="@drawable/ic_chevron_up_orange" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#d8d8d8"></LinearLayout>

            <com.opsigo.travelaja.module.item_custom.expandview.ExpandableLinearLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ael_duration="200"
                app:ael_expanded="false"
                android:id="@+id/body_price"
                app:ael_interpolator="accelerateDecelerate"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="#e0e0e1"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp">
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_station_departure"
                            style="@style/RobotoRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/green_price"
                            android:textStyle="bold"
                            android:text="Gajayana"/>

                        <TextView
                            android:id="@+id/tvSsrValue"
                            style="@style/RobotoRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:textSize="14sp"
                            android:textColor="#b324253d"
                            android:text="Fried Chicken"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_price_departure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:textSize="14sp"
                        android:textColor="#939396"
                        android:gravity="end"
                        android:text="IDR 110.800"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/line_transit"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_station_transit"
                            style="@style/RobotoRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/green_price"
                            android:textStyle="bold"
                            android:text="Gajayana"/>

                        <TextView
                            android:id="@+id/tvSsrValue2"
                            style="@style/RobotoRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:textSize="14sp"
                            android:textColor="#b324253d"
                            android:text="Fried Chicken"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_price_departure2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:textSize="14sp"
                        android:textColor="#939396"
                        android:gravity="end"
                        android:text="IDR 110.800"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/line_arrival"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_station_arrival"
                            style="@style/RobotoRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/green_price"
                            android:textStyle="bold"
                            android:text="Gajayana"/>

                        <TextView
                            android:id="@+id/tvSsrValue3"
                            style="@style/RobotoRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:textSize="14sp"
                            android:textColor="#b324253d"
                            android:text="Fried Chicken"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_price_departure3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:textSize="14sp"
                        android:textColor="#939396"
                        android:gravity="end"
                        android:text="IDR 110.800"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

            </com.opsigo.travelaja.module.item_custom.expandview.ExpandableLinearLayout>

            <com.opsigo.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="29dp"
                android:id="@+id/btnDone"
                app:text="Done">

            </com.opsigo.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>