<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.opsigo.travelaja.module.create_trip.newtrip_pertamina.viewmodel.ItineraryViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFlight1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTripNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="20dp"
                android:text="@string/trip_number"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="#24253d"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTypeTransport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="6dp"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@{viewModel.itinerary.transportation == 1 ? @string/trip_type_air : @string/trip_type}"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                style="@style/SubtitleTextStyle"
                android:textColor="#2b9a8e"
                android:textStyle="bold"
                tools:text="UDARA"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTripNumber" />

            <View
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e1"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTypeTransport"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/div">


                <LinearLayout
                    android:id="@+id/lay_end_start"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_date_check_in"
                            android:layout_width="@dimen/icon_edittext"
                            android:layout_height="@dimen/icon_edittext"
                            android:layout_marginEnd="8dp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/lay_deaprture_date"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="60dp">

                                <TextView
                                    android:text="@string/departure_date"
                                    android:textSize="14sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/tv_departur_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:hint="@string/select_departure_date"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="9dp"
                                    android:text="@{viewModel.itinerary.departureDateView}"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/colorTextHint"
                                    android:textColorHint="@color/colorTextHint"
                                    android:textSize="@dimen/font_edittext"
                                    tools:ignore="RtlCompat" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_below="@+id/lay_deaprture_date"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/colorLineEdittext">

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_depart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@+id/lay_end_start"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/icon_edittext"
                            android:layout_height="@dimen/icon_edittext"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/point_departure"
                            android:layout_marginEnd="10dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/layStartDate"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/from"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_from"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="9dp"
                                    android:text="@{viewModel.itinerary.origin}"
                                    android:hint="Origin city"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/colorTextHint"
                                    android:textColorHint="@color/colorTextHint"
                                    android:textSize="@dimen/font_edittext"
                                    tools:ignore="RtlCompat" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/layStartDate"
                                android:layout_marginRight="57dp"
                                android:background="@color/colorLineEdittext"
                                android:layout_marginEnd="57dp">


                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:visibility="visible"
                    android:id="@+id/line_doted"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/line_dot"
                    android:layout_below="@id/line_depart"
                    android:layout_width="3dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp">
                </View>

                <LinearLayout
                    android:id="@+id/line_arrive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line_depart"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/icon_edittext"
                            android:layout_height="@dimen/icon_edittext"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/point_arrival"
                            android:layout_marginEnd="10dp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/lay_to"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/to"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_to"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="9dp"
                                    android:text="@{viewModel.itinerary.destination}"
                                    android:hint="Destination city"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/colorTextHint"
                                    android:textColorHint="@color/colorTextHint"
                                    android:textSize="@dimen/font_edittext"
                                    tools:ignore="RtlCompat" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/lay_to"
                                android:background="@color/colorLineEdittext">
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


