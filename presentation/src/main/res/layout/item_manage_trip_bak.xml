<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:background="#eb0011"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            style="@style/RobotoBold"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="Reject"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/RobotoBold"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="Reject"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/white"
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/line_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cornerRounded">
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/line_border_bottom"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3324253d">
        </LinearLayout>


        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_status"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_approval_orange"
                android:textSize="10sp"
                style="@style/RobotoMedium"
                android:text="Waiting"
                android:gravity="center"
                android:paddingRight="10sp"
                android:paddingLeft="10sp"
                android:layout_width="wrap_content"
                android:layout_height="16dp"></TextView>

            <TextView
                android:id="@+id/tv_expired"
                style="@style/RobotoRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/tv_status"
                android:layout_toRightOf="@+id/tv_status"
                android:gravity="center"
                android:text="TP201802080003"
                android:textColor="#91929e"
                android:textSize="16dp"></TextView>




            <TextView
                android:id="@+id/tv_title"
                android:layout_below="@+id/tv_status"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="10dp"
                android:textColor="#24253d"
                android:textSize="18sp"
                style="@style/RobotoMedium"
                android:text="Meeting in Yogyakarta"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <ImageView
                android:src="@drawable/departure_date"
                android:id="@+id/img_city"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="14dp"
                android:layout_height="14dp"></ImageView>


            <TextView
                android:layout_toRightOf="@+id/img_city"
                android:id="@+id/tv_city"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:textColor="#939396"
                android:textSize="12sp"
                style="@style/RobotoRegular"
                android:text="Surabaya"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


            <ImageView
                android:src="@drawable/departure_date"
                android:id="@+id/img_date"
                android:layout_below="@+id/tv_city"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="14dp"
                android:layout_height="14dp"></ImageView>


            <TextView
                android:id="@+id/tv_date"
                android:layout_below="@+id/tv_city"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:textColor="#24253d"
                android:textSize="12sp"
                style="@style/RobotoBold"
                android:text="27 Mar - 31 Mar"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_date"></TextView>


            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/rectangle_manage_trip"
                android:layout_alignParentRight="true"
                android:layout_width="155dp"
                android:layout_height="match_parent">

            </ImageView>


            <LinearLayout
                android:layout_marginRight="19.7dp"
                android:layout_marginBottom="18dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:id="@+id/lay_btn_next"
                android:background="@drawable/rounded_button_yellow"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="23dp">

                <TextView
                    style="@style/RobotoMedium"
                    android:id="@+id/tv_button"
                    android:textSize="9.1dp"
                    android:textColor="@color/textButtonColor"
                    android:text="@string/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>



</FrameLayout>