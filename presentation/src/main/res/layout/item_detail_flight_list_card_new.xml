<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/line_item_vertical_flight"
        android:layout_width="2dp"
        android:layout_height="360dp"
        android:background="#91929e"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_marginRight="20dp"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_status_flight_cart"
                        style="@style/RobotoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Reserved"
                        android:textColor="#2b9a8e"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#91929e"
                        android:lineSpacingExtra="9sp"
                        style="@style/RobotoRegular"
                        android:id="@+id/tv_title_code_fl"
                        android:text="Booking Code (PNR)" />

                    <TextView
                        android:id="@+id/tv_pnr_flight_cart"
                        style="@style/RobotoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="end"
                        android:text="AW5CR34RGTP"
                        android:textColor="#24253d"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:layout_width="3dp"
                        android:layout_height="54dp"
                        android:background="#f5f5f5"/>


                    <TextView
                        android:id="@+id/tv_date_departure_flight_cart_top"
                        style="@style/RobotoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:text="SUN, 27 Apr 2019"
                        android:textColor="#91929e"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>

<!--            <LinearLayout-->
<!--                android:layout_marginBottom="11dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1.5dp"-->
<!--                android:background="#91929e"-->
<!--                android:layout_marginTop="15dp"/>-->

            <ProgressBar
                android:id="@+id/progress_flight"
                style="@style/MyProgressBar"
                android:layout_marginBottom="11dp"
                android:layout_width="match_parent"
                android:layout_height="1.7dp"
                android:layout_marginTop="15dp">
            </ProgressBar>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_toLeftOf="@+id/img_airline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_airline_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#24253d"
                        android:text="Garuda Indonesia"
                        style="@style/RobotoBold"/>

                    <LinearLayout
                        android:layout_gravity="center|center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_class_flight_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Economy Class"
                            android:textColor="#888888"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/rounded_flight"
                            android:layout_width="4dp"
                            android:layout_height="4dp"/>

                        <TextView
                            android:id="@+id/tv_subclass_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Subclass"
                            android:textColor="#888888"
                            android:textSize="10sp" />

                    </LinearLayout>



                </LinearLayout>

                <ImageView
                    android:id="@+id/img_airline"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sriwijaya"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_number_seat_flight_cart"
                        style="@style/RobotoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GA-671"
                        android:textColor="#24253d"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_progress_flight"
                        android:visibility="visible"
                        style="@style/RobotoRegular"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#eb0011"
                        android:text="Seat on progress 45% ..." />

                    <TextView
                        android:id="@+id/tv_flight_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Airbus 300"
                        android:textColor="#888888"
                        android:textSize="10sp" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_origin_flight_cart"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Jakarta"
                        android:textColor="#24253d"
                        android:textSize="12sp" />

                    <TextView
                        android:singleLine="true"
                        android:id="@+id/tv_airport_departure_cart"
                        style="@style/RobotoRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_horizontal"
                        android:text="Gambir Station"
                        android:textColor="#91929e"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_date_departure_flight_cart"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_horizontal"
                        android:text="27 Apr"
                        android:textColor="#24253d"
                        android:textSize="10sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="18dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_one_way"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_destination_flight_cart"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Padang Sidempuan"
                        android:textColor="#24253d"
                        android:textSize="12sp" />

                    <TextView
                        android:singleLine="true"
                        android:id="@+id/tv_airport_arrival_cart"
                        style="@style/RobotoRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_horizontal"
                        android:text="Pasar Turi Station"
                        android:textColor="#91929e"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_date_arrival_flight_cart"
                        style="@style/RobotoBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_horizontal"
                        android:text="28 Apr"
                        android:textColor="#24253d"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#91929e"
                android:layout_marginTop="15dp"></LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e1">
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#00776a"
                        android:text="Total Price"
                        style="@style/RobotoBold"/>

                    <TextView
                        android:id="@+id/tv_price_flight_cart"
                        style="@style/RobotoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="IDR 100.695.800"
                        android:textColor="#24253d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_not_comply"
                        style="@style/RobotoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Comply"
                        android:textColor="#d0021b"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tvDetailsCart"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:layout_width="3dp"
                        android:layout_height="54dp"
                        android:background="#f5f5f5"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:gravity="end"
                        android:textSize="10sp"
                        android:fontFamily="@font/lato_black"
                        android:textColor="#f19c00"
                        android:letterSpacing="0.1"
                        android:text="DETAILS"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>