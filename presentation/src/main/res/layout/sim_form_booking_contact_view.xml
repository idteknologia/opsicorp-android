<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mobile.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">
    </com.mobile.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_default">

                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_width="31dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_id_cart"/>

                <LinearLayout
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#009688"
                        android:text="@string/txt_driving_license_sim"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#91929e"
                        android:layout_marginTop="6dp"
                        android:text="@string/fill_driving_license_information_in_details" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="47dp"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_marginLeft="@dimen/margin_default"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#8024253d"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/title"/>

                    <LinearLayout
                        android:id="@+id/line_btn_mr"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_button_green_passanger_button">

                        <TextView
                            android:id="@+id/tv_btn_mr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Mr."
                            android:textColor="#ffffff"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line_btn_mrs"
                        android:layout_marginLeft="10dp"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_button_gray_passanger_button">

                        <TextView
                            android:id="@+id/tv_btn_mrs"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#24253d"
                            android:gravity="center"
                            android:text="Mrs." />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line_btn_ms"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rounded_button_gray_passanger_button">

                        <TextView
                            android:id="@+id/tv_btn_ms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Ms."
                            android:textColor="#24253d"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#91929e"
                        android:text="@string/full_name" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <EditText
                                android:id="@+id/et_name_driver_license"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#24253d"
                                android:text=""
                                android:background="@color/transparent"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="#b2bbc6"/>

                        </LinearLayout>


                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#5488c1"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/as_on_driving_license_without_title_and_punctuation"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#91929e"
                        android:text="@string/driving_license_number" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <EditText
                                android:inputType="number"
                                android:id="@+id/et_number_driver_license"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#24253d"
                                android:text=""
                                android:background="@color/transparent"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="#b2bbc6"/>

                        </LinearLayout>


                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#5488c1"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/driving_license_contain_12_digit_of_number"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#91929e"
                        android:text="@string/email" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <EditText
                                android:id="@+id/et_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#24253d"
                                android:text="vody@gmail.com"
                                android:background="@color/transparent"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="#b2bbc6"></LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#91929e"
                        android:text="@string/id_pax_birth_date" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:onClick="getDatePickerBirtday"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_day_birtdate"
                                    android:onClick="getDatePickerBirtday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="#24253d"
                                    android:text="29"
                                    android:background="@color/transparent"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="#b2bbc6"></LinearLayout>

                            <TextView
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#5488c1"
                                android:gravity="center_horizontal"
                                android:text="DD"/>
                        </LinearLayout>

                        <LinearLayout
                            android:onClick="getDatePickerBirtday"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_month_birtdate"
                                    android:onClick="getDatePickerBirtday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="#24253d"
                                    android:text="October"
                                    android:background="@color/transparent"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="#b2bbc6"></LinearLayout>

                            <TextView
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#5488c1"
                                android:gravity="center_horizontal"
                                android:text="MM"/>
                        </LinearLayout>

                        <LinearLayout
                            android:onClick="getDatePickerBirtday"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_year_birtdate"
                                    android:onClick="getDatePickerBirtday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="#24253d"
                                    android:text="2020"
                                    android:background="@color/transparent"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="#b2bbc6"></LinearLayout>

                            <TextView
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#5488c1"
                                android:gravity="center_horizontal"
                                android:text="YYYY"/>
                        </LinearLayout>

                        <TextView
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#91929e"
                            android:gravity="end"
                            android:text="2 Years Old"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"/>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#91929e"
                        android:text="@string/mobile_phone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <EditText
                                android:inputType="number"
                                android:id="@+id/et_mobile_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#24253d"
                                android:text="08123422"
                                android:background="@color/transparent"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="#b2bbc6"/>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="160dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:onClick="discardListener"
                        android:id="@+id/line_btn_later"
                        android:background="@drawable/rounded_button_corner_yellow"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="4sp"
                        android:layout_height="match_parent">

                        <TextView
                            android:onClick="discardListener"
                            android:id="@+id/btn_later"
                            android:textColor="@color/textColorButtonOutline"
                            android:textSize="14sp"
                            style="@style/RobotoMedium"
                            android:text="@string/discard"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:onClick="saveListener"
                        android:id="@+id/line_add_trip_item"
                        android:background="@drawable/rounded_button_yellow"
                        android:layout_marginLeft="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <TextView
                            android:onClick="saveListener"
                            android:id="@+id/btn_add_trip_item"
                            android:textColor="@color/textButtonColor"
                            android:textSize="16sp"
                            style="@style/RobotoMedium"
                            android:text="@string/save"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</RelativeLayout>