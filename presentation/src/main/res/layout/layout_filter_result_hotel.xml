<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f6f8f8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="2dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:background="@android:color/white"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:id="@+id/img_hotel">
            </ImageView>
            <LinearLayout
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_hotel"
                    style="@style/RobotoMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Trans Luxury Bandung"
                    android:textColor="#24253d">

                </TextView>

                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/rounded_button_type_hotel">

                        <TextView
                            android:id="@+id/tv_type_hotel"
                            style="@style/RobotoRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hotels"
                            android:textColor="#2b9a8e"
                            android:textSize="8dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/star_1"
                            android:layout_marginLeft="2dp"
                            android:src="@mipmap/ic_star"
                            android:layout_width="14dp"
                            android:layout_height="10dp" />
                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/star_2"
                            android:layout_marginLeft="2dp"
                            android:src="@mipmap/ic_star"
                            android:layout_width="14dp"
                            android:layout_height="10dp" />
                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/star_3"
                            android:layout_marginLeft="2dp"
                            android:src="@mipmap/ic_star"
                            android:layout_width="14dp"
                            android:layout_height="10dp" />
                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/star_4"
                            android:layout_marginLeft="2dp"
                            android:src="@mipmap/ic_star"
                            android:layout_width="14dp"
                            android:layout_height="10dp" />
                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/star_5"
                            android:layout_marginLeft="2dp"
                            android:src="@mipmap/ic_star"
                            android:layout_width="14dp"
                            android:layout_height="10dp" />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_place_gray">
                    </ImageView>

                    <TextView
                        android:id="@+id/tv_city"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Cibangkong, Bandung"
                        android:textColor="#91929e"
                        android:textSize="12dp">

                    </TextView>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_available"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#5499e4"
                        android:gravity="end"
                        android:text="8 Room(s) available" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="11dp"
                        android:fontFamily="@font/lato_regular"
                        android:textStyle="normal"
                        android:textSize="9sp"
                        android:textColor="#b2bbc6"
                        android:text="Room / Night - "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="11dp"
                        android:fontFamily="@font/lato_regular"
                        android:textStyle="normal"
                        android:textSize="9sp"
                        android:textColor="#009688"
                        android:text="from"/>

                    <TextView
                        android:id="@+id/tv_not_comply_hotel"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:fontFamily="@font/lato_regular"
                        android:textStyle="bold"
                        android:textSize="9sp"
                        android:textColor="#eb0011"
                        android:lineSpacingExtra="4.5sp"
                        android:gravity="end"
                        android:text="Not Comply"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">
                    <TextView
                        android:id="@+id/tv_prize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#24253d"
                        android:textSize="14dp"
                        style="@style/RobotoBold"
                        android:text="1.275.000">
                    </TextView>

                    <TextView
                        style="@style/RobotoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="2.9dp"
                        android:layout_toEndOf="@+id/tv_prize"
                        android:text="@string/per_night"
                        android:textColor="#b2bbc6"
                        android:textSize="10sp"/>

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_chevron_down"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>