                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
        -->

        <RelativeLayout
            android:background="@android:color/white"
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="1dp"
                android:background="@drawable/card_background_under_api_21"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="87dp">

                <RelativeLayout
                    android:id="@+id/layout_green"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/rounded_button_bottom_green"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="57dp">

                    <LinearLayout
                        android:id="@+id/layPurpose"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_trip_code"
                            style="@style/RobotoBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TP230429421"
                            android:textColor="#00776a"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_date"
                            style="@style/RobotoBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#24253d"
                            android:layout_marginRight="20dp"
                            android:text="27 Mar - 31 Mar"
                            />

                    </LinearLayout>

                    <!--                    <TextView-->
                    <!--                        android:layout_below="@id/layPurpose"-->
                    <!--                        android:text="aca aca aca"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"/>-->

                    <LinearLayout
                        android:id="@+id/layCity"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/layPurpose"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_point_gps_2"
                            android:id="@+id/img_date"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="0dp"
                            android:gravity="center"
                            android:layout_width="14dp"
                            android:layout_height="14dp"/>

                        <TextView
                            android:id="@+id/tv_city"
                            android:layout_marginLeft="5dp"
                            android:textColor="#91929e"
                            android:textSize="12sp"
                            style="@style/RobotoRegular"
                            android:text="Yogyakarta"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_status"
                            android:visibility="gone"
                            style="@style/RobotoRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="xxx"
                            android:textColor="#91929e"
                            android:textSize="12sp" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layBottom"
                    android:layout_below="@+id/layout_green"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_user_type"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/rounded_booker_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:textSize="10sp"
                        android:textColor="#ffffff"
                        android:gravity="center_horizontal"
                        android:text="Booker"
                        />


                    <TextView
                        android:id="@+id/tv_purpose"
                        android:textColor="#24253d"
                        android:textSize="12sp"
                        style="@style/RobotoBold"
                        android:text="Meeting IBM Workshop"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="0dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:id="@+id/lay_btn_next"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:background="@drawable/rounded_green_stroke_35"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="35dp">

                    <ImageView
                        android:src="@drawable/ic_chevron_next_orange"
                        android:layout_width="8dp"
                        android:layout_height="14dp"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>



    </FrameLayout>

</LinearLayout>