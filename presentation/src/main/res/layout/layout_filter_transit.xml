<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_direct"
                android:background="@drawable/rounded_button_filter"
                android:layout_width="109dp"
                android:layout_height="35dp">
                <TextView
                    android:textColor="#24253d"
                    android:id="@+id/tv_direct"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="@string/direct"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/btn_one_transit"
                android:background="@drawable/rounded_button_filter"
                android:layout_centerHorizontal="true"
                android:layout_width="99dp"
                android:layout_height="35dp">
                <TextView
                    android:textColor="#24253d"
                    android:id="@+id/tv_one_transit"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="@string/_1_transit"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:background="#f6f8f8"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/btn_two_transit"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_button_filter"
                android:layout_width="109dp"
                android:layout_height="35dp">
                <TextView
                    android:textColor="@color/colorTextHint"
                    android:id="@+id/tv_two_transit"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="@string/_2_transit"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>