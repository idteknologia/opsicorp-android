<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/test"
        android:layout_marginTop="29dp"
        android:layout_width="match_parent"
        android:layout_height="94dp">

        <com.mobile.travelaja.module.item_custom.ticket_view.TicketView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:id="@+id/ticketView"
            app:ticketCornerType="rounded"
            app:ticketOrientation="horizontal"
            app:ticketScallopRadius="14dp"
            app:ticketShowBorder="true"
            app:ticketBorderColor="#d8d8d9"
            app:ticketCornerRadius="0dp"
            app:ticketScallopPositionPercent="70"
            app:ticketShowDivider="true"
            app:ticketDividerType="dash"
            app:ticketDividerPadding="0dp"
            app:ticketElevation="0dp"/>

        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginLeft="@dimen/margin_default"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/RobotoRegular"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#2b9a8e"
                android:gravity="center_horizontal"
                android:text="Trip Code:"
                />

            <TextView
                style="@style/RobotoMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#24253d"
                android:gravity="center_horizontal"
                android:text="TP201802080003">
            </TextView>



        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="113dp"
        android:background="@drawable/border_body_ticket">

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/test"
        android:background="@drawable/border_body_ticket_1"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:nestedScrollingEnabled="false"
            android:id="@+id/rv_detail_flight"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>