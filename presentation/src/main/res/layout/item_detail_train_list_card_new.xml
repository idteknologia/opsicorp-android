<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/line_item_vertical_train"
            android:layout_width="2dp"
            android:layout_height="372dp"
            android:background="#91929e"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="30dp"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="13dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_marginRight="20dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_status_booking_train"
                            style="@style/RobotoBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="Reserved"
                            android:textColor="#2b9a8e"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="9sp"
                            android:textColor="#91929e"
                            android:lineSpacingExtra="9sp"
                            style="@style/RobotoRegular"
                            android:id="@+id/tv_title_code"
                            android:text="Booking Code (PNR)" />

                        <TextView
                            android:id="@+id/tv_pnr_train_cart"
                            style="@style/RobotoBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="end"
                            android:text="AW5CR34RGTP"
                            android:textColor="#24253d"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true"
                            android:layout_width="1dp"
                            android:layout_height="54dp"
                            android:background="#f5f5f5"></LinearLayout>

                        <TextView
                            android:id="@+id/tv_departure_date"
                            style="@style/RobotoBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="SUN, 27 Apr 2019"
                            android:textColor="#91929e"
                            android:textSize="10sp" />

                    </LinearLayout>
                </RelativeLayout>


                <ProgressBar
                    android:id="@+id/progress_train"
                    style="@style/MyProgressBar"
                    android:layout_marginBottom="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="1.7dp"
                    android:layout_marginTop="15dp">
                </ProgressBar>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name_train_cart"
                            style="@style/RobotoBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Argo Parahyangan Tambahan"
                            android:textColor="#24253d"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_class_train_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Executive (A)"
                            android:textColor="#888888"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="17dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/train_logo"></ImageView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_carrier_number"
                            style="@style/RobotoBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KAI-20A"
                            android:textColor="#24253d"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_seat_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="EKS-1/2A"
                            android:textColor="#888888"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_progress_train"
                            android:visibility="gone"
                            style="@style/RobotoRegular"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#eb0011"
                            android:text="Seat on progress 45% ..." />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f5f5"
                    android:layout_marginTop="10dp"></LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_departure_train_cart"
                            style="@style/RobotoBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Jakarta"
                            android:textColor="#24253d"
                            android:textSize="12sp" />

                        <TextView
                            android:singleLine="true"
                            android:id="@+id/tv_station_departure_cart"
                            style="@style/RobotoRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center_horizontal"
                            android:text="Gambir Station"
                            android:textColor="#91929e"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_date_departure_train_cart"
                            style="@style/RobotoBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center_horizontal"
                            android:text="27 Apr"
                            android:textColor="#24253d"
                            android:textSize="10sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3">

                        <ImageView
                            android:id="@+id/img_arrow"
                            android:layout_width="15dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrow_one_way"></ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_arrival_train_cart"
                            style="@style/RobotoBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Padang Sidempuan"
                            android:textColor="#24253d"
                            android:textSize="12sp" />

                        <TextView
                            android:singleLine="true"
                            android:id="@+id/tv_station_arrival_cart"
                            style="@style/RobotoRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center_horizontal"
                            android:text="Pasar Turi Station"
                            android:textColor="#91929e"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_date_arrival_train_cart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/RobotoBold"
                            android:layout_marginTop="2dp"
                            android:gravity="center_horizontal"
                            android:text="28 Apr"
                            android:textColor="#24253d"
                            android:textSize="10sp" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#91929e"
                    android:layout_marginTop="15dp"></LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/btn_change_seat"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#91929e"
                        android:letterSpacing="0.1"
                        android:text="CHANGE SEAT"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#e0e0e1">
                        </LinearLayout>

                        <TextView
                            android:id="@+id/btn_detail_train"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#f19c00"
                            android:letterSpacing="0.1"
                            android:text="DETAILS"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e0e1">
                </LinearLayout>

                <RelativeLayout
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#00776a"
                        android:text="Total Price"
                        android:layout_centerVertical="true"
                        style="@style/RobotoBold"/>

                    <TextView
                        android:id="@+id/tv_price_train_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="end"
                        android:text="IDR 350.000"
                        android:textColor="#24253d"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/line_bottom"
        android:orientation="vertical"></LinearLayout>




</LinearLayout>