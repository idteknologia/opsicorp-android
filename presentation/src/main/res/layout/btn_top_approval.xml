<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btn_all"
                android:background="@drawable/rounded_button_filter"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/RobotoRegular"
                    android:singleLine="true"
                    android:id="@+id/tv_all"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="  All (0)  "
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_waiting"
                android:background="@drawable/rounded_button_filter"
                android:layout_marginLeft="10dp"
                android:layout_width="91dp"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:id="@+id/tv_waiting"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="Waiting (0)"
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_approve"
                android:background="@drawable/rounded_button_filter"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:id="@+id/tv_approval"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text=" Approved (0) "
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />
            </LinearLayout>

            <LinearLayout
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/btn_rejected"
                android:background="@drawable/rounded_button_filter"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:id="@+id/tv_rejected"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text=" Rejected (0) "
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_partially_approved"
                android:background="@drawable/rounded_button_filter"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:id="@+id/tv_partially_approved"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text=" Partially Approved (0) "
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />
            </LinearLayout>


            <LinearLayout
                android:background="@drawable/rounded_button_filter"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/btn_partially_rejected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:id="@+id/tv_partially_rejected"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="Partially Rejected (0) "
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="20sp"
                android:id="@+id/btn_expired"
                android:background="@drawable/rounded_button_filter"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:id="@+id/tv_expired"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="Expired (0)"
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>