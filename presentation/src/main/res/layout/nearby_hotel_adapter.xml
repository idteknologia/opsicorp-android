<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/line_city"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#f6f8f8"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_city"
            style="@style/RobotoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#00776a"
            android:text="Jakarta"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                style="@style/RobotoRegular"
                android:id="@+id/tv_name_company"
                android:textColor="#24253d"
                android:text="Indofood, PT"/>

            <TextView
                android:id="@+id/tv_type_company"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#bbbbbb"
                android:text="Holding Group"
                style="@style/RobotoRegular"
                android:layout_below="@+id/tv_name_company"/>

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#939396"
                android:gravity="end"
                android:text="8,5 KM"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                style="@style/RobotoRegular"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>