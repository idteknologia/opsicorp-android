<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f8f8">

    <com.opsigo.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">
    </com.opsigo.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="185dp"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/RobotoRegular"
                    android:textSize="14dp"
                    android:text="Airport :"
                    android:textColor="#24253d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/tv_airport_name"
                    style="@style/RobotoRegular"
                    android:textSize="14dp"
                    android:text="Soekarno Hatta - Terminal 1C"
                    android:textColor="#939396"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <include
                android:id="@+id/layout"
                android:layout_marginTop="12dp"
                layout="@layout/layout_card_detail_flight"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></include>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:id="@+id/header_prize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingBottom="14dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_title_prize"
                        style="@style/RobotoRegular"
                        android:text="Total price for 1 pax"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_price"
                android:gravity="center"
                android:text="IDR 719.000"
                android:textSize="18sp"
                style="@style/RobotoMedium"
                android:textColor="#00776a"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_including"
                android:textSize="10sp"
                android:textColor="#939396"
                style="@style/RobotoRegular"
                android:text="Including of all fares &amp; vat"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:gravity="left"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <com.opsigo.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:id="@+id/btn_next"
                app:text="Detail Departing"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>