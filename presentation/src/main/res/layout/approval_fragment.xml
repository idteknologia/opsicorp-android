<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/nested_view"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:textSize="18dp"
            android:textColor="#24253d"
            style="@style/RobotoRegular"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:text="Trip plan status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_title_two"
            android:textAlignment="textStart"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#91929e"
            style="@style/RobotoRegular"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:text="Click list to see your trip detail"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            tools:ignore="RtlCompat" />
        
        
        <RelativeLayout
            android:id="@+id/line_search"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:background="@drawable/rounded_search_edittext"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="46dp">


            <ImageView
                android:id="@+id/ic_search"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="9dp"
                android:layout_centerVertical="true"
                android:src="@drawable/search_dasboard_icon"
                android:layout_width="21dp"
                android:layout_height="21dp" />

            <EditText
                style="@style/RobotoRegular"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:id="@+id/tv_search_approval"
                android:textSize="14dp"
                android:background="@android:color/transparent"
                android:layout_toRightOf="@+id/ic_search"
                android:textColor="#24253d"
                android:textColorHint="#939396"
                android:hint="@string/et_search_filter_approval"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--<include-->
                <!--android:emplaoyId="@+emplaoyId/line_list_approval"-->
                <!--android:visibility="visible"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_width="match_parent"-->
                <!--layout="@layout/list_layout_approval">-->

            <!--</include>-->

            <com.mobile.travelaja.module.item_custom.dasboard_approval.DasboardListApproval
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/line_list_approval">
            </com.mobile.travelaja.module.item_custom.dasboard_approval.DasboardListApproval>

            <!--<include-->
                <!--android:visibility="gone"-->
                <!--layout="@layout/list_month_approval"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->
            <!--</include>-->

            <com.mobile.travelaja.module.item_custom.dasboard_approval.DasboardApproval
                android:layout_width="match_parent"
                android:id="@+id/line_dasboard"
                android:layout_height="match_parent">
            </com.mobile.travelaja.module.item_custom.dasboard_approval.DasboardApproval>


        </FrameLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>