<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/parentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/layScroll"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ic_back"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_back"
                            android:layout_gravity="center"
                            />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e0e0e1"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/line_cbt"
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerVertical="true">

                            <TextView
                                android:id="@+id/title_cbt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#24253d"
                                android:text="@string/create_business_trip"
                                style="@style/RobotoBold"/>

                            <TextView
                                android:id="@+id/title_cbt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="3dp"
                                android:text="@string/please_fill_all_trip_information_below"
                                style="@style/RobotoRegular"/>

                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>



                <RelativeLayout
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layPurpose"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@string/traveling_purpose"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColorHint="#24253d"
                            android:textColor="#24253d"
                            android:onClick="selectTravelPurpose"
                            android:id="@+id/et_purpose"
                            android:paddingTop="8dp"
                            android:paddingBottom="9dp"
                            android:layout_marginRight="30dp"
                            android:textAlignment="viewStart"
                            android:gravity="center"
                            android:text="@string/select_your_purpose"
                            android:textSize="@dimen/font_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat"
                            android:layout_marginEnd="30dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/layPurpose"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLineEdittext">

                    </LinearLayout>


                    <ImageView
                        android:onClick="selectTravelPurpose"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_chevron_down"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/line_partner"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginLeft="30dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/title_partner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#00776a"
                            android:text="@string/traveling_with_partner"
                            style="@style/RobotoBold"/>

                    </LinearLayout>

                    <Switch
                        android:id="@+id/btn_switch3"
                        android:thumb="@drawable/rounded_switch2"
                        android:track="@drawable/track_switch_on"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        tools:ignore="UseSwitchCompatOrMaterialXml"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/layPartnerName"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lay_partner_name"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:singleLine="true"
                            android:textColorHint="#24253d"
                            android:textColor="#24253d"
                            android:background="@android:color/transparent"
                            android:id="@+id/et_partner"
                            android:paddingTop="8dp"
                            android:paddingBottom="9dp"
                            android:textAlignment="viewStart"
                            android:gravity="center"
                            android:hint="@string/fill_your_partner_name"
                            android:textSize="@dimen/font_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/lay_partner_name"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLineEdittext">
                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/layEvent"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lay_event"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <TextView
                            android:text="@string/wbs_no"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:singleLine="true"
                            android:textColorHint="#24253d"
                            android:textColor="#24253d"
                            android:background="@android:color/transparent"
                            android:id="@+id/et_event"
                            android:paddingTop="8dp"
                            android:paddingBottom="9dp"
                            android:textAlignment="viewStart"
                            android:gravity="center"
                            android:hint="@string/please_entry_wbs_element"
                            android:textSize="@dimen/font_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/lay_event"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLineEdittext">
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mp_xs"
                        android:layout_marginLeft="@dimen/mp_xs"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/mp_xs">

                        <ImageView
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_date_check_in"
                            android:layout_width="@dimen/icon_edittext"
                            android:layout_height="@dimen/icon_edittext" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/layStartDate"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="60dp">

                                <TextView
                                    android:text="@string/start_date"
                                    android:textSize="14sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:singleLine="true"
                                    android:textColorHint="#24253d"
                                    android:textColor="#24253d"
                                    android:onClick="getDateWithCalendar"
                                    android:id="@+id/tv_from"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="9dp"
                                    android:textAlignment="viewStart"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlCompat" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_below="@+id/layStartDate"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorLineEdittext">

                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_return_date"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mp_xs"
                        android:layout_marginLeft="@dimen/mp_xs"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/mp_xs">

                        <ImageView
                            android:layout_marginTop="7sp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_date_check_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/layEndDate"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="60dp">

                                <TextView
                                    android:text="@string/end_date"
                                    android:textSize="14sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:singleLine="true"
                                    android:textColorHint="#24253d"
                                    android:textColor="#24253d"
                                    android:id="@+id/et_end_date"
                                    android:onClick="getDateWithCalendar"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="9dp"
                                    android:textAlignment="viewStart"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlCompat" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_below="@+id/layEndDate"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorLineEdittext">

                            </LinearLayout>

                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/line_depart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/lay_end_start"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="17dp"
                        android:src="@drawable/point_departure" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/layOrigin"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/from"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_origin_city"
                                android:onClick="selectCountryFrom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:hint="@string/origin_city_country"
                                android:paddingTop="8dp"
                                android:paddingBottom="9dp"
                                android:text=""
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorTextHint"
                                android:textColorHint="@color/colorTextHint"
                                android:textSize="@dimen/font_edittext"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/layOrigin"
                            android:background="@color/colorLineEdittext"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/line_arrive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line_depart"
                    android:weightSum="1">


                    <ImageView
                        android:layout_width="@dimen/icon_edittext"
                        android:layout_height="@dimen/icon_edittext"
                        android:layout_gravity="bottom"
                        android:layout_marginEnd="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/marker_nearme" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/lay_to"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/to"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_destination_city"
                                android:onClick="selectCountryTo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:hint="@string/destination_city_country"
                                android:paddingTop="8dp"
                                android:paddingBottom="9dp"
                                android:text=""
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorTextHint"
                                android:textColorHint="@color/colorTextHint"
                                android:textSize="@dimen/font_edittext"
                                tools:ignore="RtlCompat" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/lay_to"
                            android:background="@color/colorLineEdittext"></LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:id="@+id/layNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="11dp"
                            android:text="@string/notes"
                            android:textSize="14sp" />


                        <EditText
                            android:id="@+id/et_notes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button_corner_grey"
                            android:gravity="center"
                            android:maxLength="100"
                            android:maxLines="3"
                            android:lines="3"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textAlignment="viewStart"
                            android:textColor="#24253d"
                            android:textColorHint="#24253d"
                            android:textSize="@dimen/font_edittext"
                            tools:ignore="RtlCompat"
                            tools:text="@tools:sample/lorem/random" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_notes_count"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layNotes"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:gravity="end"
                        android:text="@string/_0_100"
                        android:textColor="#b2bbc6"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="20dp"
                    android:background="#b2bbc6">

                </LinearLayout>

                <TextView
                    android:id="@+id/tvDescDoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="7sp"
                    tools:text="@string/information_docs" />

                <LinearLayout
                    android:id="@+id/layListAttachment"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                </LinearLayout>

                <com.cunoraz.gifview.library.GifView
                    android:id="@+id/gif1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    custom:gif="@mipmap/gif1" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_attachment"
                    android:nestedScrollingEnabled="false"
                    android:background="@android:color/white"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:onClick="openCameraView"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:id="@+id/layAddAttachment"
                    android:background="@drawable/rounded_attachment"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="162dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="30dp">

                    <TextView
                        android:onClick="openCameraView"
                        android:id="@+id/tvAddAttachment"
                        android:textSize="14sp"
                        style="@style/RobotoBold"
                        android:textColor="#24253d"
                        android:text="@string/add_attachment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/layAddImage"
                        android:background="@drawable/rounded_attachment"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#24253D"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="+"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="12sp"
                            android:text="@string/image_file"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/layAddPDF"
                        android:background="@drawable/rounded_attachment"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#24253D"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="+"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="12sp"
                            android:text="@string/pdf_file"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>

                <com.mobile.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                </com.mobile.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
</layout>