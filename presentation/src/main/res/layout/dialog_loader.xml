<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layClose"
        android:visibility="visible"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="10dp"
            android:id="@+id/imgClose"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_close_dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_loading"
                android:textSize="20dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:text="@string/please_wait2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/title2"
                android:gravity="center"
                android:layout_below="@+id/tv_title_loading"
                android:text="@string/its_just_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.cunoraz.gifview.library.GifView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/title2"
                android:id="@+id/gif1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:gif="@mipmap/gif1" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>