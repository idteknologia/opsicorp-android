<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:background="#f6f8f8"/>

    <ImageView
        android:id="@+id/blink_image"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/oval_orange"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_cart"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:src="@drawable/ic_cart_home"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/ivProfile"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="31dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.opsigo.travelaja.module.item_custom.circle_image.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:civ_border_color="#f5f5f5"
            android:src="#f5f5f5"
            android:id="@+id/img_profile"
            app:civ_circle_background_color="#f5f5f5"/>

        <ImageView
            android:id="@+id/img_dummy"
            android:padding="6dp"
            android:src="@drawable/ic_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

<!--    <ImageView-->
<!--        android:id="@+id/ivProfile"-->
<!--        android:layout_width="33dp"-->
<!--        android:layout_height="33dp"-->
<!--        android:visibility="gone"-->
<!--        android:layout_marginStart="23dp"-->
<!--        android:layout_marginLeft="23dp"-->
<!--        android:layout_marginTop="31dp"-->
<!--        android:scaleType="fitCenter"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        android:background="@drawable/ic_profile"-->
<!--        tools:background="@drawable/ic_profile" />-->

    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#939393"
        android:textSize="12sp"
        android:fontFamily="@font/lato_regular"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:lines="1"
        app:layout_constraintEnd_toStartOf="@+id/img_cart"
        app:layout_constraintStart_toEndOf="@+id/ivProfile"
        app:layout_constraintTop_toTopOf="@id/ivProfile"
        tools:text="Hi, Dwi Wahyudi" />

    <TextView
        style="@style/SubtitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_your_trip"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/ivProfile"
        app:layout_constraintTop_toBottomOf="@+id/tv_greeting" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="36dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfile">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="9dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginEnd="19dp"
                android:gravity="center"
                android:layout_marginRight="19dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_group_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:textColor="#f19c00"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginLeft="12dp"
                    android:text="Business Trip" />

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:paddingStart="31dp"
                android:paddingLeft="31dp"
                android:paddingEnd="25dp"
                android:paddingRight="25dp"
                android:text="Reimburstment"
                android:textColor="#939396"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/line_cart"
                android:layout_width="69dp"
                android:layout_height="78dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                android:visibility="gone"
                android:src="@drawable/combined_shape"/>


        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone">


            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_bisnis_trip"
                        android:layout_centerInParent="true"
                        android:src="@drawable/bisnis_home"
                        android:layout_width="51dp"
                        android:layout_height="51dp"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_flight"
                        android:layout_centerInParent="true"
                        android:src="@drawable/flight_home"
                        android:layout_width="44.6dp"
                        android:layout_height="44.6dp"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_train"
                        android:layout_centerInParent="true"
                        android:src="@drawable/train_home"
                        android:layout_width="44.6dp"
                        android:layout_height="44.6dp"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_hotel"
                        android:layout_centerInParent="true"
                        android:src="@drawable/hotel_home"
                        android:layout_width="44.6dp"
                        android:layout_height="44.6dp"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_tour"
                        android:layout_centerInParent="true"
                        android:src="@drawable/tour_event"
                        android:layout_width="44.6dp"
                        android:layout_height="44.6dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    style="@style/RobotoMedium"
                    android:textColor="#24253d"
                    android:textSize="13dp"
                    android:text="@string/business_trip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
    <!--            f19c00-->
                <TextView
                    android:gravity="center"
                    style="@style/RobotoRegular"
                    android:textColor="#939396"
                    android:textSize="13dp"
                    android:text="@string/flights"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    style="@style/RobotoRegular"
                    android:textColor="#939396"
                    android:textSize="13dp"
                    android:text="@string/train"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    style="@style/RobotoRegular"
                    android:textColor="#939396"
                    android:textSize="13dp"
                    android:text="@string/hotels"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    style="@style/RobotoRegular"
                    android:textColor="#939396"
                    android:textSize="13dp"
                    android:text="@string/tour_event"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>