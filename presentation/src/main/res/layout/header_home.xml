<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:background="#f4f4f4"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/tvAccountType"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/ic_bg_rounded_right_white"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_default"
        android:paddingRight="33dp"
        app:layout_goneMarginTop="2dp"
        android:layout_marginBottom="2dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Travelaja Basic" />



    <ImageView
        android:id="@+id/img_cart"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="9dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/bg_circle_fill"
        android:src="@drawable/ic_cart_home"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/blink_image"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_margin="5dp"
        android:src="@drawable/oval_orange"
        app:layout_constraintRight_toRightOf="@id/img_cart"
        app:layout_constraintTop_toTopOf="@id/img_cart" />

    <RelativeLayout
        android:id="@+id/ivProfile"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="23dp"
        android:scaleType="fitCenter"
        tools:visibility="visible"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_greeting">

        <TextView
            android:id="@+id/tvAlphabetName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            tools:text="JW"
            android:fontFamily="@font/lato_regular"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#2a2a2a"
            android:gravity="center"
            android:background="#d8d8d8"/>

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/stroke_rounded_image_profile"/>
    </RelativeLayout>

<!--    <ImageView-->
<!--        android:id="@+id/ivProfile"-->
<!--        android:layout_width="33dp"-->
<!--        android:layout_height="33dp"-->
<!--        android:visibility="gone"-->
<!--        android:layout_marginStart="23dp"-->
<!--        android:layout_marginLeft="23dp"-->
<!--        android:layout_marginTop="31dp"-->
<!--        android:scaleType="fitCenter"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        android:background="@drawable/ic_profile"-->
<!--        tools:background="@drawable/ic_profile" />-->

    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/lato_regular"
        android:lines="1"
        android:textColor="#939393"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/img_cart"
        app:layout_constraintStart_toEndOf="@+id/ivProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvAccountType"
        tools:text="Hi, Dwi Wahyudi" />

    <TextView
        android:id="@+id/tvSubtitle2"
        style="@style/SubtitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_your_trip"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/ivProfile"
        app:layout_constraintTop_toBottomOf="@+id/tv_greeting" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="9dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llBisnisTrip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_group_new" />

                <TextView
                    style="@style/TextDarkFontLato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/txt_business_trip"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tvReimbursement"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:paddingStart="31dp"
                android:paddingEnd="25dp"
                android:text="@string/txt_reimburstment"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorReimbursement"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/line_cart"
                android:layout_width="69dp"
                android:layout_height="78dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                android:visibility="gone"
                android:src="@drawable/combined_shape"/>


        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone">


            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_bisnis_trip"
                        android:layout_centerInParent="true"
                        android:src="@drawable/bisnis_home"
                        android:layout_width="51dp"
                        android:layout_height="51dp"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_flight"
                        android:layout_centerInParent="true"
                        android:src="@drawable/flight_home"
                        android:layout_width="44.6dp"
                        android:layout_height="44.6dp"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_train"
                        android:layout_centerInParent="true"
                        android:src="@drawable/train_home"
                        android:layout_width="44.6dp"
                        android:layout_height="44.6dp"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_hotel"
                        android:layout_centerInParent="true"
                        android:src="@drawable/hotel_home"
                        android:layout_width="44.6dp"
                        android:layout_height="44.6dp"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_tour"
                        android:layout_centerInParent="true"
                        android:src="@drawable/tour_event"
                        android:layout_width="44.6dp"
                        android:layout_height="44.6dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    style="@style/RobotoMedium"
                    android:textColor="#24253d"
                    android:textSize="13dp"
                    android:text="@string/business_trip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
    <!--            f19c00-->
                <TextView
                    android:gravity="center"
                    style="@style/RobotoRegular"
                    android:textColor="#939396"
                    android:textSize="13dp"
                    android:text="@string/flights"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    style="@style/RobotoRegular"
                    android:textColor="#939396"
                    android:textSize="13dp"
                    android:text="@string/train"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    style="@style/RobotoRegular"
                    android:textColor="#939396"
                    android:textSize="13dp"
                    android:text="@string/hotels"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    style="@style/RobotoRegular"
                    android:textColor="#939396"
                    android:textSize="13dp"
                    android:text="@string/tour_event"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>