<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F7F7F7"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@android:color/transparent"
                android:id="@+id/line_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_back"
                    android:src="@drawable/ic_back"
                    android:layout_width="@dimen/size_image_back"
                    android:layout_height="@dimen/size_image_back"
                    android:scaleType="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="35dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#24253d"
                        android:gravity="end"
                        android:text="@string/hotel_summary"
                        style="@style/RobotoBold"/>

                    <TextView
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#91929e"
                        android:gravity="end"
                        android:id="@+id/tv_total_night"
                        style="@style/RobotoRegular"
                        tools:text="2 Night (s)"
                        android:layout_marginTop="2dp"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_below="@+id/line_header"
                android:layout_marginBottom="100dp"
                android:id="@+id/line_body"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_status_hotel_cart"
                                style="@style/RobotoBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/check_in"
                                android:textColor="#2b9a8e"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_check_in"
                                style="@style/RobotoBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                tools:text="Sun 27 Apr 2019"
                                android:textColor="#24253d"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_marginEnd="20dp"
                                android:layout_width="1dp"
                                android:layout_height="54dp"
                                android:background="#f5f5f5"/>

                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RobotoBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:text="@string/check_out"
                                    android:textColor="#2b9a8e"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_check_out"
                                    style="@style/RobotoBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_gravity="end"
                                    tools:text="Sun 27 Apr 2019"
                                    android:textColor="#24253d"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/tv_image_hotel_cart"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="11dp"
                        android:scaleType="center"
                        android:src="@drawable/background_slider"/>

                    <TextView
                        android:id="@+id/tv_name_hotel_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Pondok Gajah Homestay"
                        android:textColor="#24253d"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_type_hotel_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_green_stroke_50_persen"
                            android:gravity="center_horizontal"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp"
                            tools:text="Apartments"
                            android:textColor="#2b9a8e"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <LinearLayout
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ic_start_1"
                                android:layout_marginStart="4dp"
                                android:src="@mipmap/ic_star"
                                android:layout_width="14dp"
                                android:layout_height="14dp" />
                            <ImageView
                                android:id="@+id/ic_start_2"
                                android:layout_marginStart="4dp"
                                android:src="@mipmap/ic_star"
                                android:layout_width="14dp"
                                android:layout_height="14dp" />
                            <ImageView
                                android:id="@+id/ic_start_3"
                                android:layout_marginStart="4dp"
                                android:src="@mipmap/ic_star"
                                android:layout_width="14dp"
                                android:layout_height="14dp" />
                            <ImageView
                                android:id="@+id/ic_start_4"
                                android:layout_marginStart="4dp"
                                android:src="@mipmap/ic_star"
                                android:layout_width="14dp"
                                android:layout_height="14dp" />
                            <ImageView
                                android:id="@+id/ic_start_5"
                                android:layout_marginStart="4dp"
                                android:src="@mipmap/ic_star"
                                android:layout_width="14dp"
                                android:layout_height="14dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_description_hotel_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="54dp"
                        android:lineSpacingExtra="6sp"
                        tools:text="Jalan Ringroad Selatan, Tamantirto, Kasihan, Kasihan, Yogyakarta, Yogyakarta Province, Indonesia, 55133"
                        android:textColor="#91929e"
                        android:textSize="12sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#91929e"
                        android:layout_marginTop="12dp">
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/id_include_breakfast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp"
                            android:background="@drawable/rounded_green_stroke_50_persen"
                            android:gravity="center_horizontal"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp"
                            tools:text="Include Breakfast"
                            android:textColor="#2b9a8e"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_hotel_round_grey"/>

                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_detail_facility"
                                style="@style/RobotoBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:lineSpacingExtra="4sp"
                                tools:text="24sqm Kingsize or Twin Bed 2m10 Bath Shower Free Wifi Minibar in Room Nespresso Art Nouveau Military Rate Id Must Be Shown on Arrival Incl Vat Wifi 24pm"
                                android:textColor="#24253d"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_double_bed"
                                style="@style/RobotoBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                tools:text="Twin bed or Double bed"
                                android:textColor="#5499e4"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_info_cancelation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_warning_trianggel_orange"/>

                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_cancelation_policy"
                                style="@style/RobotoBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:lineSpacingExtra="4sp"
                                android:text="@string/cancelation_policy"
                                android:textColor="#24253d"
                                android:textSize="12sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_cancel_policy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"/>
<!--                            <LinearLayout-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:orientation="horizontal"-->
<!--                                android:layout_marginTop="10dp">-->
<!--                                <LinearLayout-->
<!--                                    android:layout_marginEnd="5dp"-->
<!--                                    android:layout_gravity="center"-->
<!--                                    android:layout_width="5dp"-->
<!--                                    android:layout_height="5dp"-->
<!--                                    android:background="@drawable/rounded_orange"/>-->

<!--                                <TextView-->
<!--                                    android:id="@+id/tv_cancelation_policy1"-->
<!--                                    style="@style/RobotoRegular"-->
<!--                                    android:layout_width="wrap_content"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:text="No charge for cancellation before 22 May 2020"-->
<!--                                    android:textColor="#939396"-->
<!--                                    android:textSize="10sp"-->
<!--                                    tools:ignore="SmallSp" />-->
<!--                            </LinearLayout>-->

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#91929e"
                        android:layout_marginTop="12dp"/>

                    <RelativeLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#939396"
                                android:text="@string/room_night"
                                style="@style/RobotoRegular"/>

                            <TextView
                                android:id="@+id/tv_prize_hotel_cart"
                                style="@style/RobotoBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                tools:text="IDR 100.695.800"
                                android:textColor="#24253d"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_notcomply"
                                style="@style/RobotoBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/not_comply"
                                android:textColor="#d0021b"
                                android:textSize="10sp"
                                android:visibility="visible"
                                tools:ignore="SmallSp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_marginEnd="20dp"
                                android:layout_width="1dp"
                                android:layout_height="54dp"
                                android:background="#f5f5f5"/>

                            <TextView
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="31dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/tintTextView"
                                android:gravity="end"
                                android:text="@string/detail"
                                style="@style/RobotoBold"
                                tools:ignore="SmallSp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/line_reason_code"
                android:visibility="visible"
                app:cardElevation="0dp"
                android:layout_below="@+id/line_body"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/ic_reason_code"
                        android:id="@+id/ic_reason_code"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="13dp"
                        android:layout_marginStart="15dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                    <LinearLayout
                        android:layout_toEndOf="@+id/ic_reason_code"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_reason_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#d0021b"
                            android:text="@string/select_reason_code"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#91929e"
                            android:text="@string/choose_the_information_for_not_comply_price_policy"
                            tools:ignore="SmallSp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_next_orange"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        android:visibility="visible"
        android:id="@+id/line_prize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"
        layout="@layout/detail_prize_bottom_hotel"/>

</RelativeLayout>