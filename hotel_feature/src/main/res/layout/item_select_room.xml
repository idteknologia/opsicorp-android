<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:id="@+id/id_parent"
        android:orientation="vertical">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default">

        <LinearLayout
            android:id="@+id/line_guaranted"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_approval_gray"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:id="@+id/tv_type_refund"
                style="@style/RobotoRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Free Cancelation"
                android:textColor="#ffffff"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_title_hotel"
            android:layout_marginBottom="11dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/line_guaranted">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_include_breakfast"
                            style="@style/RobotoRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Included Breakfast"
                            android:textColor="#939396"
                            android:textSize="12dp"/>

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:background="@drawable/rounded_button_cyrcel_green">
                        </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/type_booking"
                            style="@style/RobotoRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Direct Booking"
                            android:textColor="#939396"
                            android:textSize="12dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/tv_title_room"
                        style="@style/RobotoMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Superior Room"
                        android:textColor="#24253d"
                        android:textSize="16dp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">
                    <LinearLayout
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_not_comply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not comply"
                            android:textSize="10dp"
                            android:layout_marginBottom="6dp"
                            style="@style/RobotoBold"
                            android:textColor="#eb0011">
                        </TextView>

                        <TextView
                            android:layout_marginBottom="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total include VAT"
                            android:textSize="10dp"
                            style="@style/RobotoRegular"
                            android:textColor="#939396">
                        </TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_prize_room"
                                style="@style/RobotoBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="900.000.000"
                                android:textColor="@color/green_cyan_info"
                                android:textSize="16sp"/>

                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_wifi"
                        android:layout_width="20dp"
                        android:layout_height="16dp">
                    </ImageView>
                    <TextView
                        android:layout_marginTop="3dp"
                        android:text="Free Wifi"
                        android:textSize="7dp"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#91929e"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_meal"
                        android:layout_width="20dp"
                        android:layout_height="16dp">
                    </ImageView>
                    <TextView
                        android:layout_marginTop="3dp"
                        android:text="Free Meel"
                        android:textSize="7dp"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#91929e"></TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/line_title_hotel"
            android:id="@+id/line_center"
            android:background="#dddddd"
            android:orientation="vertical"
            android:layout_marginTop="11dp"/>

        <RelativeLayout
            android:paddingBottom="10dp"
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9dp"
                android:id="@+id/tv_title_policy"
                android:textColor="#009688"
                android:text="Cancelation Policy"
                style="@style/RobotoMedium">
            </TextView>

            <LinearLayout
                android:id="@+id/btn_information"
                android:layout_marginTop="1.5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_title_policy"
                android:gravity="center"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/rounded_blue_stroke_50_persen">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/RobotoBlack"
                    android:textStyle="normal"
                    android:textSize="7.8sp"
                    android:textColor="#939396"
                    android:text="i"
                    />
            </LinearLayout>


            <TextView
                android:layout_below="@+id/tv_title_policy"
                android:id="@+id/tv_policy_description"
                style="@style/RobotoMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="This Reservation is non-refundable"
                android:textColor="#939396"
                android:textSize="9sp"></TextView>

            <TextView
                android:id="@+id/btn_next_step"
                android:layout_alignParentRight="true"
                android:layout_width="137dp"
                style="@style/RobotoBold"
                android:layout_height="29dp"
                android:text="Select"
                android:textColor="@color/textButtonColor"
                android:background="@drawable/rounded_button_yellow"
                android:gravity="center">
            </TextView>
        </RelativeLayout>



    </RelativeLayout>



</LinearLayout>