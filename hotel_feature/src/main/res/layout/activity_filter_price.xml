<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result.FilterPriceActivity">

    <com.mobile.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">
    </com.mobile.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="@dimen/margin_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#24253d"
                    android:text="PRICE / PAX" />

                <TextView
                    style="@style/RobotoBold"
                    android:id="@+id/tv_min_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#009688"
                    android:gravity="end"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="@dimen/margin_default"
                    android:layout_alignParentRight="true"
                    android:text="Currency (IDR)" />

<!--                <it.sephiroth.android.library.rangeseekbar.RangeSeekBar-->
<!--                    android:layout_marginTop="60dp"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:max="1000000"-->
<!--                    android:layout_marginRight="40dp"-->
<!--                    android:layout_marginLeft="40dp"-->
<!--                    android:id="@+id/rangebar"-->
<!--                    style="@style/Base.Sephiroth.Widget.RangeSeekBar"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:range_progress_endValue="1000"-->
<!--                    app:range_progress_startValue="0"/>-->

                <LinearLayout
                    android:layout_marginBottom="17dp"
                    android:layout_below="@+id/tv_min_max"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:inputType="number"
                        android:id="@+id/et_min"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:paddingLeft="15dp"
                        android:hint="Start"
                        android:background="@drawable/rounded_button_corner_grey_97"
                        android:layout_marginLeft="@dimen/margin_default"
                        android:layout_width="0dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"></EditText>

                    <EditText
                        android:inputType="number"
                        android:id="@+id/et_max"
                        android:singleLine="true"
                        android:paddingRight="15dp"
                        android:hint="Max"
                        android:paddingLeft="15dp"
                        android:background="@drawable/rounded_button_corner_grey_97"
                        android:layout_marginRight="@dimen/margin_default"
                        android:layout_marginLeft="8dp"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"></EditText>
                </LinearLayout>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#939396"
                    android:text="IDR 50.000"
                    android:layout_below="@+id/rangebar"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="21dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#939396"
                    android:gravity="end"
                    android:layout_below="@+id/rangebar"
                    android:text="IDR 300.000"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"/>-->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e0e0e1">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RobotoBold"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="@dimen/margin_default"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
                android:textColor="#24253d"
                android:text="Facilities"/>

            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="34dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_facility">
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e0e0e1">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RobotoBold"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="@dimen/margin_default"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="22dp"
                android:textColor="#24253d"
                android:text="Star Rating"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginBottom="34dp"
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_height="wrap_content"
                android:id="@+id/rv_star_rating">
            </androidx.recyclerview.widget.RecyclerView>


            <com.mobile.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_marginBottom="40dp"
                app:text="Apply"
                android:id="@+id/btn_submit">
            </com.mobile.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>