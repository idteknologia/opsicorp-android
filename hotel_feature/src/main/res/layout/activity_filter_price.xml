<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result.FilterPriceActivity">

    <com.mobile.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">
    </com.mobile.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#24253d"
                    android:text="PRICE / PAX" />

                <TextView
                    style="@style/RobotoBold"
                    android:id="@+id/tv_min_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#009688"
                    android:gravity="end"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:layout_alignParentEnd="true"
                    android:text="Currency (IDR)" />

                <LinearLayout
                    android:layout_marginBottom="17dp"
                    android:layout_below="@+id/tv_min_max"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:inputType="number"
                        android:id="@+id/et_min"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:paddingLeft="15dp"
                        android:hint="Start"
                        android:background="@drawable/rounded_button_corner_grey_97"
                        android:layout_marginStart="@dimen/margin_default"
                        android:layout_width="0dp"
                        android:layout_marginEnd="8dp"
                        android:layout_height="40dp"
                        android:layout_weight="1" />

                    <EditText
                        android:inputType="number"
                        android:id="@+id/et_max"
                        android:singleLine="true"
                        android:paddingRight="15dp"
                        android:hint="Max"
                        android:paddingLeft="15dp"
                        android:background="@drawable/rounded_button_corner_grey_97"
                        android:layout_marginEnd="@dimen/margin_default"
                        android:layout_marginStart="8dp"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e0e0e1"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RobotoBold"
                android:layout_marginTop="21dp"
                android:layout_marginStart="@dimen/margin_default"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
                android:textColor="#24253d"
                android:text="Facilities"/>

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="34dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_facility"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e0e0e1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RobotoBold"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="@dimen/margin_default"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="22dp"
                android:textColor="#24253d"
                android:text="Star Rating"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginBottom="34dp"
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_height="wrap_content"
                android:id="@+id/rv_star_rating"/>
            <com.mobile.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_marginBottom="40dp"
                app:text="Apply"
                android:id="@+id/btn_submit"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>