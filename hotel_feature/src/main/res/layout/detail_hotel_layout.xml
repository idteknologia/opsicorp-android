<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/line_title"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="@dimen/margin_default"
        android:paddingRight="@dimen/margin_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="The Trans Luxury Bandung"
            android:textColor="#24253d"
            android:textSize="16sp"
            style="@style/RobotoMedium"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/rounded_button_type_hotel">

                <TextView
                    android:id="@+id/tv_type_hotel"
                    style="@style/RobotoRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/hotels"
                    android:textColor="#2b9a8e"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_marginStart="7dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_start1"
                    android:layout_marginStart="2dp"
                    android:src="@mipmap/ic_star"
                    android:layout_width="13dp"
                    android:layout_height="13dp" />
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/ic_start2"
                    android:layout_marginStart="2dp"
                    android:src="@mipmap/ic_star"
                    android:layout_width="13dp"
                    android:layout_height="13dp" />
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/ic_start3"
                    android:layout_marginStart="2dp"
                    android:src="@mipmap/ic_star"
                    android:layout_width="13dp"
                    android:layout_height="13dp" />
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/ic_start4"
                    android:layout_marginStart="2dp"
                    android:src="@mipmap/ic_star"
                    android:layout_width="13dp"
                    android:layout_height="13dp" />
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/ic_start5"
                    android:layout_marginStart="2dp"
                    android:src="@mipmap/ic_star"
                    android:layout_width="13dp"
                    android:layout_height="13dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_place_gray"/>


            <TextView
                android:id="@+id/tv_city"
                style="@style/RobotoRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                tools:text="Cibangkong, Bandung"
                android:textColor="#91929e"
                android:textSize="12sp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/line_title"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d8">
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="13dp"
        android:id="@+id/line_riview"
        android:layout_below="@id/line_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_marginEnd="10dp"
                android:layout_width="35dp"
                android:layout_height="39dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/combined"/>

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/white"
                    android:layout_centerHorizontal="true"
                    style="@style/RobotoMedium"
                    tools:text="4.5"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reviews"
                    android:textColor="#24253d"
                    android:textSize="16sp"
                    style="@style/RobotoMedium"/>

                <TextView
                    android:id="@+id/totalRiviews"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="from 0 reviews"
                    android:textColor="#939396"
                    android:textSize="12sp"
                    style="@style/RobotoRegular"/>
            </LinearLayout>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_review">
        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d8">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/line_facility"
        android:layout_below="@+id/line_riview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginStart="@dimen/margin_default"
            android:textSize="16sp"
            style="@style/RobotoMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_facilities"
            android:textColor="#24253D">
        </TextView>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_facility">
        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d8">
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:paddingTop="18dp"
        android:id="@+id/line_map"
        android:layout_below="@+id/line_facility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="WebViewLayout">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="@dimen/margin_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textColor="#24253d"
                android:textSize="16sp"
                style="@style/RobotoMedium"/>

            <TextView
                android:id="@+id/btn_view_map"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_larger_map"
                android:textSize="12sp"
                style="@style/RobotoMedium"
                android:textColor="#2b9a8e"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="178dp">
            <WebView
                android:clickable="false"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/webview">
            </WebView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/line_web"
                android:orientation="horizontal">
            </LinearLayout>
        </RelativeLayout>



        <TextView
            android:id="@+id/tv_address_hotel"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_address_detail_hotel"
            android:layout_marginLeft="62dp"
            android:gravity="center"
            android:textSize="12sp"
            style="@style/RobotoRegular"
            android:layout_marginRight="62dp"/>

    </LinearLayout>
</RelativeLayout>