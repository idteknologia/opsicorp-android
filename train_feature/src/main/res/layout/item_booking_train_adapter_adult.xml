<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:background="@drawable/rounded_booking_contact"
            android:layout_height="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="#91929e"
                    android:text="x" />
                <TextView
                    android:id="@+id/number_data_adult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#00776a"
                    android:text="1"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#656677"
                android:text="Adult Passenger" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#91929e"
                android:text="Age 3 and older"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/line_vertical"
            android:layout_width="2dp"
            android:layout_height="207dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="34dp"
            android:background="#91929e"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_below="@+id/line_vertical"
            android:id="@+id/line_vertical_aaditional"
            android:layout_width="2dp"
            android:layout_height="105dp"
            android:layout_marginLeft="34dp"
            android:background="#91929e"
            android:orientation="horizontal"></LinearLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/line_card_id"
            app:cardCornerRadius="3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="65dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:buttonTint="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/checkboxIdCart"></RadioButton>

                    <LinearLayout
                        android:layout_toEndOf="@+id/checkboxIdCart"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/checkboxIdCart">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#24253d"
                            android:text="ID Card (KTP)"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:id="@+id/name_passanger_by_ktp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#91929e"
                            android:text="Mr. Vody Andrian" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:background="#d8d8d8"></LinearLayout>
                        <TextView
                            android:id="@+id/btn_id_cart"
                            android:layout_gravity="center"
                            style="@style/RobotoBold"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#00776a"
                            android:gravity="center_horizontal"
                            android:text="Edit" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line_id_cart"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"></LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e0e1"></LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:buttonTint="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/checkboxPassport"></RadioButton>

                    <LinearLayout
                        android:layout_toEndOf="@+id/checkboxPassport"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/checkboxPassport">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#24253d"
                            android:text="PASSPORT"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:id="@+id/name_passanger_by_passport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#eb0011"
                            android:text="Please add, this field is required" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:background="#d8d8d8"></LinearLayout>
                        <TextView
                            android:id="@+id/btn_id_passport"
                            android:layout_gravity="center"
                            style="@style/RobotoBold"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#f19c00"
                            android:gravity="center_horizontal"
                            android:text="Add" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line_passport"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal"></LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e0e1"></LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RadioButton
                        android:buttonTint="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/checkSim"></RadioButton>

                    <LinearLayout
                        android:layout_toEndOf="@+id/checkSim"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/checkSim">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#24253d"
                            android:text="Driving License (SIM)"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:id="@+id/name_passanger_by_sim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#eb0011"
                            android:text="Please add, this field is required" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:background="#d8d8d8"></LinearLayout>
                        <TextView
                            android:id="@+id/btn_id_sim"
                            android:layout_gravity="center"
                            style="@style/RobotoBold"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#f19c00"
                            android:gravity="center_horizontal"
                            android:text="Add" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line_sim"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"></LinearLayout>
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/tv_additional"
            android:layout_marginLeft="65dp"
            android:layout_below="@+id/line_card_id"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#939396"
            android:text="Additional Flights Services" />



        <LinearLayout
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="18dp"
            android:layout_below="@+id/tv_additional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:id="@+id/card_baggage"
                android:layout_width="90dp"
                android:layout_height="40dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginRight="8dp"
                            android:layout_width="20dp"
                            android:src="@drawable/ic_baggage"
                            android:layout_height="20dp">

                        </ImageView>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/RobotoBold"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#24253d"
                                android:gravity="center_horizontal"
                                android:text="Baggage"/>

                            <TextView
                                style="@style/RobotoBold"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#24253d"
                                android:gravity="center_horizontal"
                                android:text="0 KG"/>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:id="@+id/card_ssr"
                android:layout_width="90dp"
                android:layout_height="40dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginRight="8dp"
                            android:layout_width="20dp"
                            android:src="@drawable/ic_baggage"
                            android:layout_height="20dp">

                        </ImageView>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/RobotoBold"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#24253d"
                                android:gravity="center_horizontal"
                                android:text="SSR"/>

                            <TextView
                                style="@style/RobotoBold"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#24253d"
                                android:gravity="center_horizontal"
                                android:text="Meals,etc"/>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:visibility="visible"
                android:layout_margin="5dp"
                android:id="@+id/card_frequency_flayer"
                android:layout_width="90dp"
                android:layout_height="40dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginRight="8dp"
                            android:layout_width="20dp"
                            android:src="@drawable/ic_freequent_flyaer"
                            android:layout_height="20dp">

                        </ImageView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/RobotoBold"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#24253d"
                                android:gravity="center_horizontal"
                                android:text="Frequent"/>

                            <TextView
                                style="@style/RobotoBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="#24253d"
                                android:gravity="center_horizontal"
                                android:text="Flyer"/>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </RelativeLayout>



</LinearLayout>