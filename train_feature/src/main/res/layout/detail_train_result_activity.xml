<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.mobile.travelaja.module.item_custom.toolbar_view.ToolbarOpsicorp
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="185dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/line_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:orientation="vertical">

                <TextView
                    style="@style/RobotoBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/txt_departure_train"
                    android:textColor="#00776a"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e1" />

            <RelativeLayout
                android:id="@+id/line_name_airline"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_below="@+id/line_title"
                android:paddingLeft="@dimen/margin_default"
                android:paddingRight="@dimen/margin_default">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_airline"
                        android:layout_width="43dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/train_logo" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_title_train"
                            style="@style/RobotoMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#24253d"
                            android:textSize="14dp"
                            tools:text="Gajayana" />

                        <TextView
                            android:id="@+id/tv_class_type"
                            style="@style/RobotoRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#8024253d"
                            android:textSize="12sp"
                            tools:text="Economy Class" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="31dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_gerbong"
                        style="@style/RobotoMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9924253d"
                        android:textSize="12sp"
                        tools:text="KAI-20A" />

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#e0e0e1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="73dp">

                <LinearLayout
                    android:id="@+id/line_depart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_time_departure"
                        style="@style/RobotoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#24253d"
                        android:textSize="14sp"
                        tools:text="13:00" />

                    <TextView
                        android:id="@+id/tv_date_departure"
                        style="@style/RobotoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#939396"
                        android:textSize="10sp"
                        tools:text="27 Apr" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line_depart"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_time_arrival"
                        style="@style/RobotoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="13:00"
                        android:textColor="#24253d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_date_arrival"
                        style="@style/RobotoMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="27 Apr"
                        android:textColor="#939396"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_detail_depart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_toEndOf="@+id/line_depart"
                    android:layout_toRightOf="@+id/line_depart"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name_city_departure"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Jakarta (GMR)"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_name_station_departure"
                        style="@style/RobotoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Gambir Station"
                        android:textColor="#212121"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_bloc_station_departure"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Terminal 2F"
                        android:textColor="#8024253d"
                        android:textSize="10sp"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/rounded_green_stroke_50_persen"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="9dp"
                            android:src="@drawable/ic_clock_black"/>

                        <TextView
                            android:id="@+id/line_total_duration"
                            style="@style/RobotoMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="16sp"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="9dp"
                            tools:text="2h 20m"
                            android:textColor="#212121"
                            android:textSize="10sp" />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_toEndOf="@+id/line_depart"
                    android:layout_toRightOf="@+id/line_depart"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dote_progress"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:orientation="vertical"
                        android:src="@drawable/point_departure"/>

                    <LinearLayout
                        android:id="@+id/line_after_dote_progress"
                        android:layout_width="1dp"
                        android:layout_height="53dp"
                        android:background="@drawable/background_dot_vertical"
                        android:orientation="vertical"
                        android:visibility="visible">

                    </LinearLayout>


                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/point_arrival"
                        android:visibility="visible"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line_detail_depart"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@+id/line_depart"
                    android:layout_toRightOf="@+id/line_depart"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name_city_arrival"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Bandung (BD)"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_name_station_arrival"
                        style="@style/RobotoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Bandung Hall Station"
                        android:textColor="#212121"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_bloc_station_arrival"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Terminal 2F"
                        android:textColor="#8024253d"
                        android:textSize="10sp"
                        android:visibility="gone" />

                </LinearLayout>


            </RelativeLayout>
            <!--        <android.support.v7.widget.RecyclerView-->
            <!--            android:layout_marginTop="15dp"-->
            <!--            android:id="@+id/rv_departure_arrival"-->
            <!--            android:layout_below="@+id/line_name_airline"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>-->


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_departure_arrival"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="13dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_prize_detail"
                    style="@style/RobotoRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_price_details"
                    android:textColor="#00776a"
                    android:textSize="15sp" />

                <TextView
                    style="@style/RobotoRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="/ Pax"
                    android:textColor="#91929e"
                    android:textSize="12sp" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/line_prize_detail"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_below="@+id/tv_title_prize_detail"
                android:background="#f6f8f8"
                android:paddingLeft="@dimen/margin_default"
                android:paddingRight="@dimen/margin_default">

                <TextView
                    android:id="@+id/tv_total_passager"
                    style="@style/RobotoMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Adult x1"
                    android:textColor="#939396"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_total_prize"
                    style="@style/RobotoBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    tools:text="IDR 110.000"
                    android:textColor="#d9000000"
                    android:textSize="15sp" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_prize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_default"
            android:paddingBottom="14dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_title_prize"
                        style="@style/RobotoRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_total_price_for_1_pax"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_price"
                style="@style/RobotoMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                tools:text="IDR 719.000"
                android:textColor="#24253D"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_including"
                style="@style/RobotoRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="start"
                android:text="@string/txt_including_off_all"
                android:textColor="#939396"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.mobile.travelaja.module.item_custom.button_default.ButtonDefaultOpsicorp
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="20dp"
                app:text="Detail Departing" />

        </LinearLayout>
    </LinearLayout>

